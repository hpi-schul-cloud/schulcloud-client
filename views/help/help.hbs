{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/help/help.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script type="text/javascript" src="/scripts/dashboard.js" defer></script>
    {{/content}}

    {{#content "page"}}
        <section class="faqpanel">
            <div class="container-fluid">
        {{#ifneq this.currentRole "Demo"}}
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="card" style="text-align: center">
                            <div class="card-block">
                                <div class="card-text">
                                    <h4 class="card-title">Befragung I im Projekt Schul-Cloud</h4>
                                    <p class="card-text">
                                        Im Rahmen der Pilotphase I im Projekt Schul-Cloud möchten wir Sie bitten, an unserer circa 30-minütigen Online-Befragung teilzunehmen. Mit Hilfe dieser sollen Erwartungshaltungen und Erfolgsfaktoren gegenüber digitaler Medien in Schule und Unterricht allgemein und gegenüber der Schul-Cloud geprüft werden.
                                    </p>
                                    <p class="card-text">
                                        Vielen Dank für Ihre Mitarbeit!
                                    </p>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a href="https://tools.openhpi.de/survey/index.php?r=survey/index&sid=137936&newtest=Y&lang=de" target="_blank" >
                                    <button class="btn btn-primary btn-poll">Zur Umfrage</button>
                                </a>
                            </div>
                            </div>
                    </div>
                </div>
        {{/ifneq}}
                <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="card h-100">
                                    <div class="img-out">
                                        <img class="card-img-top circular" src="/images/login-left.png" alt="Card image cap">
                                    </div>
                                    <div class="card-block">
                                        <div class="card-text">
                                            <h4 class="card-title">Häufig gestellte Fragen</h4>
                                            <p class="card-text">Hier finden Sie Antworten auf häufig gestellte Fragen rund zum Thema Schul-Cloud.</p>
                                        </div>
                                    </div>
                                    <div class="card-footer" style="position: absolute; bottom: 0px; width: 100%;">
                                        <a href="/help/faq" class="btn btn-primary">Zu den Fragen</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="card h-100">
                                    <div class="img-out">
                                        <img class="card-img-top circular" src="/images/login-right.png" alt="Card image cap">
                                    </div>
                                    <div class="card-block">
                                        <div class="card-text">
                                            <h4 class="card-title">SSO in der Schul-Cloud</h4>
                                            <p class="card-text">Hier finden Sie Erläuterungen zum SSO generell sowie zum SSO in der Schul-Cloud.</p>
                                        </div>
                                    </div>
                                    <div class="card-footer" style="position: absolute; bottom: 0px; width: 100%;">
                                        <a href="/help/faq/sso" class="btn btn-primary">Zu den Fragen</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="card h-100">
                                    <div class="img-out">
                                        <img class="card-img-top circular" src="/images/login-left.png" alt="Card image cap">
                                    </div>
                                    <div class="card-block">
                                        <div class="card-text">
                                            <h4 class="card-title">Anleitung zur Verwaltung von Lehrkräften und Schülern und Schülerinnen</h4>
                                            <p class="card-text">Hier finden Sie Erklärungen zum Anlegen und zur allgemeinen Verwaltung von Schülern und Schülerinnen und Lehrkräften.</p>
                                        </div>
                                    </div>
                                    <div class="card-footer" style="position: absolute; bottom: 0px; width: 100%;">
                                        <a href="/help/faq/administration" class="btn btn-primary">Zur Erklärung</a>
                                    </div>
                                </div>
                            </div>
                </div>
                <div class="row" style="padding-top: 20px">
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="card h-100">
                            <div class="img-out">
                                <i class="fa fa-bug card-img-top circular" aria-hidden="true"></i>
                            </div>
                            <div class="card-block">
                                <div class="card-text">
                                    <h4 class="card-title">Problem melden</h4>
                                    <p class="card-text">Sie haben ein Problem in der Schul-Cloud gefunden? Schreiben Sie uns doch! Für Ihre Hinweise sind wir dankbar!</p>
                                </div>
                            </div>
                            <div class="card-footer" style="position: absolute; bottom: 0px; width: 100%;">
                                <a href="/vendor/fact-sheet.pdf" target="_blank" class="btn btn-primary submit-problem">Problem melden</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <div class="card h-100">
                            <div class="img-out">
                                <img class="card-img-top circular" src="https://hpi.de/fileadmin/user_upload/hpi/bilder/teaser_news/2013/open_hpi_logo_400x300__08.jpg" alt="Card image cap">
                            </div>
                            <div class="card-block">
                                <div class="card-text">
                                    <h4 class="card-title">Schul-Cloud MOOC</h4>
                                    <p class="card-text">Um Sie bei Ihren ersten Klicks in der Schul-Cloud zu begleiten, haben wir einen MOOC-Kurs zusammengestellt und auf der etablierten Bildungsplattform openHPI für Sie als ausgewählte Pilotschulen bereitgestellt. Er soll Sie durch die Schul-Cloud lotsen und Sie bei der Testung der Schul-Cloud mit verschiedenen Videosequenzen unterstützen.</p>
                                </div>
                            </div>
                            <div class="card-footer" style="position: absolute; bottom: 0px; width: 100%;">
                                <a href="https://open.hpi.de/courses/schulcloud2017" target="_blank" class="btn btn-primary">Zum openHPI Kurs</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="changelog" id="changelog">
            <h4>Neuste Funktionen</h4>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <div id="accordion" role="tablist" aria-multiselectable="true">
                            {{#each release}}
                                <div class="card">
                                    <div class="card-header" role="tab" id="heading-{{@index}}">
                                        <h5 class="mb-0">
                                            <a data-toggle="collapse" data-parent="#accordion"
                                               href="#collapse-{{@index}}"
                                               {{#ifeq @index 0}}aria-expanded="true"{{/ifeq}}
                                               aria-controls="collapse-{{@index}}">
                                                <div>
                                                    {{this.name}}
                                                    <span class="text-muted author">
                                                        {{this.publishedAt}}
                                                    </span>
                                                </div>
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapse-{{@index}}" class="collapse"
                                         role="tabpanel" aria-labelledby="heading-{{@index}}" {{#ifeq @index 0}}aria-expanded="true"{{/ifeq}}>
                                        <div class="card-block">
                                            {{{this.body}}}
                                        </div>
                                        <div class="card-footer">
                                            <a href="{{this.url}}" target="_blank">Weiterlesen</a>
                                            <span class="author"><i class="fa fa-user"></i><a href="{{this.authorUrl}}" target="_blank">{{this.author}}</a></span>
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {{/content}}
{{/extend}}
