{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/help/help.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/help.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}

        {{> "help/search"}}

        {{#embed "help/component-card" title="Erste Schritte" icon="fa-child" class="first-steps-card" id="Erste_Schritte"}}
            {{#content "card-body"}}
                {{#embed "help/clickable-card" clickable=firstStepsItems link-class="col-sm-3"}}
                {{/embed}}
            {{/content}}
        {{/embed}}

        {{#each tutorials}}
            {{#embed "help/component-card" title=this.title icon=this.icon class="accordion"}}
                {{#content "card-body"}}
                    {{#each this.categories}}
                        {{#if this.articles}}
                            <div class="card">
                                <div class="card-header collapsed" data-toggle="collapse" data-target="#{{this.id}}">
                                    <i class="fa fa-fw fa-chevron-right bullet-icon" aria-hidden="true" data-expand></i>
                                    <i class="fa fa-fw fa-chevron-down bullet-icon" aria-hidden="true" data-collapse></i>
                                    <h5 class="mb-0">
                                        {{this.title}}
                                    </h5>
                                </div>
                                <div id="{{this.id}}" class="collapse">
                                    <div class="card-body">
                                        <ul>
                                            {{#each this.articles}}
                                                <li><a href="/help/confluence/{{this.id}}">
                                                    {{this.title}}
                                                </a></li>
                                            {{/each}}
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {{else}}
                        <div class="card">
                            <a href="/help/confluence/{{this.id}}">
                                <div class="card">
                                    <div class="card-header single">
                                        <h5 class="mb-0">
                                            {{this.title}}
                                        </h5>
                                    </div>
                                </div>
                            </a>
                        </div>
                        {{/if}}
                    {{/each}}
                {{/content}}
            {{/embed}}
        {{/each}}

        {{#embed "help/component-card" title="Nutzungshilfen" icon="fa-map-signs" class="quickHelp-card" id="Nutzungshilfen"}}
            {{#content "card-body"}}
                {{#embed "help/clickable-card" clickable=quickHelpItems link-class="col-sm-4"}}
                {{/embed}}
            {{/content}}
        {{/embed}}

        {{#embed "help/component-card" title="Kontaktformular" icon="fa-pencil" class="contact-card" id="Kontakt"}}
            {{#content "card-body"}}
                {{> "help/contact"}}
            {{/content}}
        {{/embed}}

        {{#embed "help/component-card" title="Schreib uns eine E-Mail" icon="fa-envelope" class="eMail-card" id="E-Mail"}}
            {{#content "card-body"}}
                {{> "help/mail-card"}}
            {{/content}}
        {{/embed}}

        {{#embed "help/component-card" title="Ãœber das Projekt" icon="fa-lightbulb-o" class="information-card" id="About"}}
            {{#content "card-body"}}
                {{#embed "help/clickable-card" clickable=knowledgeItems link-class="col-sm-4"}}
                {{/embed}}
            {{/content}}
        {{/embed}}

    {{/content}}
{{/extend}}
