
<input type="hidden" name="target" value="HPI">
<input type="hidden" name="type" value="problem">
<input type="hidden" name="supportType" value="problem">


<h4 class="icon-card__title">{{$t "help.partials.headline.problemArea"}}</h4>
<span class="icon-card__subtitle">{{$t "help.contact.text.whichAreaOfSchulCloud" (dict "themeTitle" theme.theme_title "shortTitle" theme.short_title)}}</span>
<center>
<label class="form-group col-md-6">
		<span class="control-label"><i class="info_text fa fa-info-circle"></i>{{$t "help.chooseTopicArea.text.eachTopicSeparate"}}</span>
		<select class="form-control" name="problemArea" class="problemArea" aria-placeholder={{$t "help.contact.text.chooseArea"}}>
			<option value="" disabled selected hidden>{{$t "help.chooseTopicArea.text.chooseArea"}}</option>
			<option value="Aufgaben">{{$t "help.chooseTopicArea.text.pTasks"}}</option>
			<option value="Authentifizierung">{{$t "help.chooseTopicArea.text.pAuthentication"}}</option>
			<option value="Dateien">{{$t "help.chooseTopicArea.text.pMyFiles"}}</option>
			<option value="Datenschutz">{{$t "help.chooseTopicArea.text.pPrivacy"}}</option>
			<option value="Externe Tools">{{$t "help.chooseTopicArea.text.pExternalTools"}}</option>
			<option value="Hilfebereich">{{$t "help.chooseTopicArea.text.pHelparea"}}</option>
			<option value="Kommunikation">{{$t "help.chooseTopicArea.text.pCommunication"}}</option>
			<option value="Kurse">{{$t "help.chooseTopicArea.text.pCourses"}}</option>
			<option value="Lern-Store">{{$t "help.chooseTopicArea.text.pLernStore"}}</option>
			<option value="Mobile Nutzung">{{$t "help.chooseTopicArea.text.pMobileUse"}}</option>
			<option value="Neuigkeiten">{{$t "help.chooseTopicArea.text.pNews"}}</option>
			<option value="Sonstige">{{$t "help.chooseTopicArea.text.pOther"}}</option>
			<option value="Teams">{{$t "help.chooseTopicArea.text.pTeams"}}</option>
			<option value="Termine">{{$t "help.chooseTopicArea.text.pCalendar"}}</option>
			<option value="Uebersicht">{{$t "help.chooseTopicArea.text.pDashboard"}}</option>
			<option value="Verwaltung">{{$t "help.chooseTopicArea.text.pManagement"}}</option>
			<option value="Zusatzangebote">{{$t "help.chooseTopicArea.text.pAddOns"}}</option>
		</select>
</label>
</center>

<p class="control-label headline">{{$t "help.form_bug.label.problemAlreadyKnown"}}</p>
<p id="inline_text">{{$t "help.form_bug.text.problemAlreadyKnownText"}} {{{$t "help.form_bug.label.knownProblemLink"}}}	
</p>

<iframe class="full contact" src="https://docs.dbildungscloud.de/display/SCDOK/Bekannte+Fehler+in+der+Cloud+und+ihre+Behebung?frameable=true"
    frameborder="0" scrolling="yes">
</iframe>

<h4 class="icon-card__title">{{$t "help.contact.text.contactSupport"}}</h4>
<span class="icon-card__subtitle">{{$t "help.contact.text.contactSupportSubtitle"}}</span>

<label class="form-group">
	<span class="control-label">{{$t "help.global.label.briefDescriptionOfTheProblem" }}</span>
	<input class="form-control" type="text" name="title" placeholder="{{$t "help.placeholder.briefDescriptionOfTheProblem" }}" data-testid="bug_headline" required>
</label>
<label class="form-group">
	<span class="control-label">{{$t "help.form_bug.label.problemDescription" }}</span>
<textarea class="form-control" cols="50" name="problemDescription" rows="14" data-testid="bug_description" required></textarea>
</label>
<label class="form-group">
	<span class="control-label">{{$t "help.form_bug.label.theProblemOccursOnTheDevice" }}</span>
	<input type="text" name="device" placeholder="z.B. iPhone X, Samsung Galaxy S10" class="form-control" data-testid="bug_device">
</label>
<label class="form-group">
	<span class="control-label">
		{{$t "help.global.label.replyEmail" }}
	</span>
	<input class="form-control" type="email" name="replyEmail" placeholder="{{$t "help.placeholder.email"}}" value="{{ userEmail }}" data-testid="bug_email" required>
</label>
<fieldset>
	<legend class="control-legend">{{$t "help.global.label.furtherInformation" }}</legend>
    <label class="consent_label" for="consent">
        <div class="row consent_row">
	        <div id="consent_checkbox">
		        <input type="checkbox" id="consent" name="consent" value="true" checked>
	        </div>
	        <div>
		        <span class="control-label">
			    {{{$t "help.form_bug.text.iAgreeThatTheFollowingInformationMayBe" }}}
		        </span>
	        </div>
        </div>
    </label>
</fieldset>
{{#ifEnv "FEATURE_CONTACT_FORM_ATTACHMENTS_ENABLED" "true"}}
<br>
<label class="form-group">
    <span class="control-label">{{$t "help.form_bug.label.maxSizeFiles" }} (max. {{ @root.MAXIMUM_ALLOWABLE_TOTAL_ATTACHMENTS_SIZE_MEGABYTE }}MB)</span>
    <input type="file" class="form-control-file" name="file" multiple="multiple" accept="image/*,video/*,application/msword,application/pdf"
		data-max-attachment-size-mb="{{ @root.MAXIMUM_ALLOWABLE_TOTAL_ATTACHMENTS_SIZE_MEGABYTE }}">
</label>
{{/ifEnv}}
<hr>
<span class="control-label file-alert"></span>
