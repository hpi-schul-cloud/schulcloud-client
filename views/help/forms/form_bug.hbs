<input type="hidden" name="target" value="HPI">
<input type="hidden" name="type" value="problem">

<label class="form-group">
	<label class="control-label">{{$t "help.global.label.briefDescriptionOfTheProblem" }}</label>
	<input class="form-control" type="text" name="title" placeholder="{{$t "help.placeholder.briefDescriptionOfTheProblem" }}" required>
</label>
<label class="form-group">
	<label class="control-label">{{$t "help.form_bug.label.problemDescription" }}</label>
<textarea class="form-control" cols="50" name="problemDescription" rows="14" required></textarea>
</label>
<label class="form-group">
	<span class="control-label optional">{{$t "help.form_bug.label.theProblemOccursOnTheDevice" }}</span>
	<input type="text" name="device" placeholder="z.B. iPhone X, Samsung Galaxy S10" class="form-control">
</label>
<label class="form-group">
	<span class="control-label">
		{{$t "help.global.label.replyEmail" }}
	</span>
	<input class="form-control" type="email" name="replyEmail" placeholder="{{$t "help.placeholder.email"}}" value="{{ userEmail }}" required>
</label>
<hr>
<p>{{$t "help.global.label.furtherInformation" }}</p>
<label>
<div class="row">
	<div class="col-xs-2">
		<input type="checkbox" id="consent" name="consent" value="true" checked>
	</div>
	<div class="col-xs-10">
		<span class="control-label" for="consent">
			{{{$t "help.form_bug.text.iAgreeThatTheFollowingInformationMayBe" }}}
		</span>
	</div>
</div>
</label>
{{#ifEnv "FEATURE_CONTACT_FORM_ATTACHMENTS_ENABLED" "true"}}
<br>
<label class="form-group">
    <span class="control-label">{{$t "help.form_bug.label.maxSizeFiles" }} (max. {{ ../formAttachmentsSize }}MB):</span>
    <input type="file" class="form-control-file" name="file" multiple="multiple" accept="image/*,video/*,application/msword,application/pdf"
		data-max-attachment-size-mb="{{ ../formAttachmentsSize }}">
</label>
{{/ifEnv}}
<hr>
<span class="control-label file-alert"></span>
