{{#extend "lib/default"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/authentication/home.css"/>
        <link rel="stylesheet" href="/styles/team/team.css"/>
    {{/content}}
     {{#content "critical-styles" mode="append"}}
        {{{inlineStyle "/styles/authentication/home.critical.css"}}}
        {{{inlineStyle "/styles/team/team.critical.css"}}}
        header a[href='/team']{
            background-color: #f8a41b;
        }
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script type="text/javascript" src="/scripts/team.js" defer></script>
        <script type="text/javascript" src="/vendor/vanilla-tilt.min.js" defer></script>
    {{/content}}

    {{#content "body"}}
        {{#embed "lib/header"}}{{/embed}}
        <div class="container">
            <div class="card">
                <div class="card-block">
                    <div class="section-title"><h4>{{title}}</h4></div>
                    {{#embed "team/team"}}{{/embed}}
                </div>
            </div>
        </div>
        {{#embed "lib/extended_footer"}}{{/embed}}
    {{/content}}
{{/extend}}