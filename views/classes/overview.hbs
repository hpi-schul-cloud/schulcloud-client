{{#extend "lib/loggedin"}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/classes.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/classes/classes.css"/>
    {{/content}}

    {{#content "page"}}
        <section class="section-classes">
            <div>
                <div class="row results card-deck-row">
                    {{#each classes}}
                        {{#each this}}
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="card h-100">
                                    <div class="card-block">
                                        <h4 class="card-title">
                                            {{this.name}}
                                        </h4>
                                        <div class="content">
                                            {{#userHasPermission "COURSE_EDIT"}}
                                                <div class="row">
                                                    <a class="btn-edit"
                                                       href="/classes/{{../_id}}"
                                                       target="_blank"
                                                       alt="Löschen der Klasse: '{{../name}}'.">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <a
                                                       href="/classes/{{../_id}}"
                                                       target="_blank"
                                                       data-method="delete-material"
                                                       data-name="{{../name}}"
                                                       alt="Löschen der Klasse: '{{../name}}'.">
                                                        <i class="fa fa-trash-o"></i>
                                                    </a>
                                                </div>
                                            {{/userHasPermission}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{else}}
                        <div class="col-xs-12">
                            <p class="text-muted text-center">
                                <span>Keine Klassen.</span>
                            </p>
                        </div>
                    {{/each}}
                </div>

                {{#userHasPermission "COURSE_EDIT"}}
                    <div class="row padding-top">
                        <button class="sc-btn btn-add sc-btn-primary">Klasse anlegen</button>
                    </div>
                {{/userHasPermission}}
            </div>

            {{#embed "lib/components/modal" class="delete-modal" title="Bist du dir sicher?"}}
                {{#content "body"}}

                    <div class="modal-footer">
                        <button type="button" class="sc-btn sc-btn-secondary btn-close">
                            Abbrechen
                        </button>

                        <button type="submit" class="sc-btn sc-btn-primary btn-submit">
                            Löschen
                        </button>
                    </div>
                {{/content}}
            {{/embed}}

            {{#embed "lib/components/modal-form" method="patch" class="edit-modal"}}
                {{#content "fields"}}
                    {{> "administration/forms/form-classes"}}
                {{/content}}
            {{/embed}}
            {{#embed "lib/components/modal-form" method="post" class="add-modal" action="/classes/"}}
                {{#content "fields"}}
                    {{> "administration/forms/form-classes"}}
                {{/content}}
            {{/embed}}

        </section>
    {{/content}}
{{/extend}}
