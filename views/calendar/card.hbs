<style>
.events-card p {
  margin-bottom: 0;
}
.events-card .card {
  padding: 15px;
}
.events-card .date-info {
  display: flex;
  align-items: center;
  flex-flow: column;
}
.badge-secondary {
    color: #fff;
    background-color: #6c757d;
}
.badge {
    display: inline-block;
    padding: .25em .4em;
    font-size: 75%;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: .25rem;
}
</style>

<div data-event="{{json event}}" class="events-card col-lg-6 col-xl-4">
  <div class="card">
    <div class="row row-striped">
      <div class="col-xs-3 text-right date-info">
        <h1><span class="badge badge-secondary">{{event.day}}</span></h1>
        <h3>{{event.month}}</h3>
      </div>
      <div class="col-xs-9">
        <h4>
          <strong>{{event.title}}</strong>
          <i style="cursor: pointer; font-size: 18px" class="ml-1 btn-edit-event fa fa-edit"></i>
        </h4>
      
        <ul class="list-inline">
            <li class="list-inline-item"><i class="fa fa-calendar-o" aria-hidden="true"></i> {{event.dayOfTheWeek}}</li>
          <li class="list-inline-item"><i class="fa fa-clock-o" aria-hidden="true"></i> {{event.fromTo}} Uhr</li>
          {{#if event.location}}
            <li class="list-inline-item"><i class="fa fa-location-arrow" aria-hidden="true"></i> {{event.location}}</li>
          {{/if}}
        </ul>
        <p>{{event.description}}</p>
      </div>
    </div>
  </div>
</div>