<input name="schoolId" type="hidden" data-force-value="true" value="{{currentSchool}}" />

<div class="form-group">
    <label>Name des Systems</label>
    <input class="form-control" name="alias" type="text" value="{{alias}}" />
</div>

<div class="form-group">
    <label>Typ des Systems</label>
    <select name="type" required data-placeholder="Anbieter auswÃ¤hlen">
        {{#each availableSSOTypes}}
            <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
    </select>
</div>

<div class="form-group">
    <label>Url des Systems</label>
    <input class="form-control" name="url" type="text" value="{{url}}" required />
</div>
