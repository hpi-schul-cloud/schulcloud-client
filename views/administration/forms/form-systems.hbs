<input name="schoolId" type="hidden" data-force-value="true" value="{{currentSchool}}" />

<div class="form-group">
    <label>{{$t "administration.form_System.label.systemName" }}</label>
    <input class="form-control" name="alias" type="text" value="{{alias}}" />
</div>

<div class="form-group">
    <label>{{$t "administration.form_System.label.systemType" }}</label>
    <select name="type" required data-placeholder="Anbieter auswÃ¤hlen" class="sso-type-selection" >
        {{#each @root.availableSSOTypes}}
            {{#unless this.hidden}}
                <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
            {{/unless}}
        {{/each}}
    </select>
</div>
<div class="form-group">
    <label>{{$t "administration.form_System.label.urlOfTheSystem" }}</label>
    <input class="form-control" name="url" type="text" value="{{url}}" />
</div>
<hr>
<div class="panel-group collapsePanel">
    <div class="panel panel-default" id="panel-oauth">
        <div class="panel-heading">
            <a data-toggle="collapse" href="#collapse{{collapseId}}" class="collapse-toggle"><label>{{$t "administration.form_System.label.furtherInformation" }}</label><i class="fa fa-chevron-right collapse-icon" aria-hidden="true"></i></a>
        </div>
        <div id="collapse{{collapseId}}" class="panel-collapse collapse">
            <div class="form-group">
                <label>Client-ID</label>
                <input class="form-control" name="oaClientId" type="text">
            </div>
            <div class="form-group">
                <label>{{$t "administration.form_System.label.clientSecret" }}</label>
                <input class="form-control" name="oaClientSecret" type="text">
            </div>
        </div>
    </div>
</div>
