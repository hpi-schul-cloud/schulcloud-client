<input name="schoolId" type="hidden" data-force-value="true" value="{{currentSchool}}" />

<div class="form-group">
    <label>Name des Systems</label>
    <input class="form-control" name="alias" type="text" value="{{alias}}" />
</div>

<div class="form-group">
    <label>Typ des Systems</label>
    <select name="type" required data-placeholder="Anbieter auswÃ¤hlen">
        {{#each availableSSOTypes}}
            <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
        {{/each}}
    </select>
</div>
<div class="form-group">
    <label>Url des Systems</label>
    <input class="form-control" name="url" type="text" value="{{url}}" required />
</div>
<hr>
<div class="panel-group">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a data-toggle="collapse" href="#collapse{{collapseId}}" class="collapse-toggle"><label>Weitere Informationen (OAuth)</label><i class="fa fa-chevron-right collapse-icon" aria-hidden="true"></i></a>
        </div>
        <div id="collapse{{collapseId}}" class="panel-collapse collapse">
            <div class="form-group">
                <label>Client-ID</label>
                <input class="form-control" name="oaClientId" type="text">
            </div>
            <div class="form-group">
                <label>Client-Geheimnis</label>
                <input class="form-control" name="oaClientSecret" type="text">
            </div>
        </div>
    </div>
</div>
