<input name="schoolId" type="hidden" data-force-value="true" value="{{currentSchool}}" />

<div class="form-group">
    <label>Erstellt am: </label>
    <textarea class="form-control" name="createdAt" type="text" rows="1" disabled></textarea>
</div>

<div class="form-group">
    <label>Titel</label>
    <input class="form-control" name="subject" type="text" disabled />
</div>

<div class="form-group">
    <label>Ist-Zustand</label>
    <textarea class="form-control" name="currentState" type="text" cols="50" rows="6" disabled></textarea>
</div>

<div class="form-group">
    <label>Soll-Zustand</label>
    <textarea class="form-control" name="targetState" type="text" cols="50" rows="6" disabled></textarea>
</div>

<div class="form-group">
    <label>Anmerkungen</label>
    <textarea class="form-control" name="notes" type="text" cols="50" rows="6"></textarea>
</div>