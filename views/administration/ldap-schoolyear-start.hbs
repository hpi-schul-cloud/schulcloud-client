{{#extend "lib/simple"}}
    {{#content "page" mode="prepend"}}
        <h1 class="h4" id="page-title">{{$t "administration.ldapSchoolYearStart.headline.checkTheSynchronizationOfTheDataAvailable" }}</h1>
        <div class="route-administration">
            <p>{{$t "administration.ldapSchoolYearStart.text.onThisPageYouWillFindTheData" (dict "shortTitle" theme.short_title) }} </p>
            <section class="section-school section-default">
                <div class="container-fluid ajaxcontent">
                    <h5>{{$t "administration.ldapSchoolYearStart.headline.LDAPClasses" }}</h5>
                    <div class="row">
                        <div class="col-sm-12 no-padding">
                            {{> "lib/components/table" head=headClasses body=bodyClasses limit=false}}
                        </div>
                    </div>
                    <h5>{{$t "administration.ldapSchoolYearStart.headline.LDAPUsers" }}</h5>
                    <div class="row">
                        <div class="col-sm-12 no-padding">
                            {{> "lib/components/table" head=headUser body=bodyUsers limit=false}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 no-padding">
                            <button class="btn btn-primary btn-add windowclose">{{$t "administration.ldapSchoolYearStart.button.closeWindow" }}</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    {{/content}}
{{/extend}}
