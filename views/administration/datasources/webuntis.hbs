{{#extend "lib/loggedin"}}

	{{#content "scripts" mode="append"}}
		<script src="/scripts/administration/classes/edit.js" type="text/javascript" defer></script>
	{{/content}}

	{{#content "styles" mode="append"}}
	{{/content}}

	{{#content "page"}}
		{{#if hasLoginData}}
			<p>Um WebUntis nutzen zu können musst du zunächst einige Daten hinterlegen.</p>
			<a href="/administration/datasources/webuntis/edit" class="btn btn-secondary">Anmeldedaten bearbeiten</a>
		{{else}}
			<form method="post" action="{{action}}">
				TODO zu synchronisierende Daten hier auswählen

				<div class="modal-footer mt-1">
					<a href="/administration/datasources/webuntis/edit" class="btn btn-secondary pull-left">Anmeldedaten
						bearbeiten</a>
					<button class="btn btn-secondary btn-cancel">Abbrechen</button>
					<button class="btn btn-primary" type="submit">Synchronisieren</button>
				</div>

				{{#embed "lib/components/modal-cancel" class="cancel-modal"}}{{/embed}}
			</form>
		{{/if}}

	{{/content}}
{{/extend}}
