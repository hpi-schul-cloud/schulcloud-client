{{#extend "lib/loggedin"}}

    {{#content "scripts" mode="append"}}
        <script type="text/javascript" defer src="/scripts/teamOverview.js"></script>
    {{/content}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/courses/empty-state.css"/>
    {{/content}}

    {{#content "page"}}
        <section class="empty-state">
            <img src="/images/empty-states/teams.svg" alt="Team von Lehrern" class="image mx-auto d-block"/>
            <div class="text-wrapper mx-auto d-block">
                <h2 class="text-center">Teams vernetzen Schule</h2>
                <h3 class="h5 text-muted text-center">
                    Lege ein Team an, um Material und Neuigkeiten zwischen Mitgliedern außerhalb von Kursen auszutauschen.
                </h3>
            </div>
            {{#userHasPermission "TEAM_EDIT"}}
            <div class="row">
                <div class="center buttons">
                    <a href="/teams/add" class="btn btn-lg btn-add btn-primary">Gründe ein Team</a>
                </div>
            </div>
            {{/userHasPermission}}
        </section>
    {{/content}}
{{/extend}}
