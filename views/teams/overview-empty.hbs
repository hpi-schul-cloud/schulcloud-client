{{#extend "lib/loggedin"}}

    {{#content "scripts" mode="append"}}
        <script type="text/javascript" defer src="/scripts/teamOverview.js"></script>
    {{/content}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/courses/empty-state.css"/>
    {{/content}}

    {{#content "page"}}
        <section class="empty-state">
            <img src="/images/empty-states/lehrer_klasse.svg" alt="Lehrer mit Klasse" class="image mx-auto d-block"/>
            <div class="text-wrapper mx-auto d-block">
                <h2 class="text-center">Mit Teams Schule gemeinsam gestalten</h2>
                <h3 class="h5 text-muted text-center">
                    Es gibt noch keine Teams. Ein Team in der {{theme.short_title}} erm√∂glicht den Austausch von Dateien und Neuigkeiten zwischen den Mitgliedern.
                </h3>
            </div>
            {{#userHasPermission "TEAM_EDIT"}}
            <div class="row">
                <div class="center buttons">
                    <a href="/teams/add" class="btn btn-lg btn-add btn-primary">Erstelle ein Team</a>
                </div>
            </div>
            {{/userHasPermission}}
        </section>
    {{/content}}
{{/extend}}
