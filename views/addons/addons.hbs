{{#extend "lib/loggedin"}}
	{{#content "styles" mode="append"}}
		<link rel="stylesheet" href="{{getVersionedPath '/styles/addons/addons.css'}}" />
	{{/content}}
	{{#content "page"}}
		{{#ifConfig "FEATURE_EXTENSION_PORTFOLIO_ENABLED" true}}
			<a class="card card-block card-tool" href="/tools/show/portfolio">
				<h2 class="h5">{{$t "addons.headline.portfolio"}}</h2>
				<img src="{{getVersionedPath '/images/cloud.png'}}" class="card-img" style="width:auto; height:75px;" alt="" roles="presentation" />
				<span>{{$t "addons.text.portfolioDescription"}}</span>
			</a>
		{{/ifConfig}}
	{{/content}}
{{/extend}}