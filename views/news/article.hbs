{{#extend "news/news"}}
    {{#content "page"}}
        <p>
            <small class="text-muted">{{timeFromNow news.displayAt}}</small>
            <small class="text-muted">
                von {{news.creatorId.firstName}} {{news.creatorId.lastName}} erstellt
            </small>
        </p>
        <div class="ckcontent">
            {{{news.content}}}
        </div>
        {{#userHasPermission "SCHOOL_NEWS_EDIT"}}
            <div class="mt-1">
                <a class="sc-btn sc-btn-secondary btn-delete" href="/news/{{../news._id}}" target="_blank" data-method="delete-material" data-name="{{../news.title}}" alt="Artikel '{{../news.title}}' löschen" redirect="/news/">
                    Löschen
                </a>
                <a class="sc-btn sc-btn-primary btn-edit" href="/news/{{../news._id}}/edit" alt="Artikel '{{../news.title}}' bearbeiten.">
                    Bearbeiten
                </a>
            </div>
            {{#embed "lib/components/modal" class="delete-modal" title="Bist du dir sicher?"}}
                {{#content "body"}}
                    <div class="modal-footer">
                        <button type="button" class="sc-btn sc-btn-secondary btn-close">
                            Abbrechen
                        </button>
                        <button type="submit" class="sc-btn sc-btn-primary btn-submit">
                            Löschen
                        </button>
                    </div>
                {{/content}}
            {{/embed}}
        {{/userHasPermission}}
    {{/content}}
{{/extend}}