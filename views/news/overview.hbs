{{#extend "news/news"}}
{{#content "page"}}
<div class="route-news">
    {{#userHasPermission "SCHOOL_NEWS_EDIT"}}
    <a href="/news/new" data-testid="create-news-btn" class="btn btn-primary btn-add create pull-right mb-2">
        <i class="fa fa-plus" aria-hidden="true"></i> {{$t "news.button.addNews" }}
    </a>
    {{/userHasPermission}}
    {{#if unpublishedNews.total}}
    <div class="tabContainer">
        <div class="tabs" data-max-width="1024">
            <button class="tab active" data-tab="a">
                <svg version="1.1" id="Ebene_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" height="24px" width="24px">
                <style type="text/css">
                    .st0{fill-rule:evenodd;clip-rule:evenodd;}
                </style>
                <g>
                    <path d="M12,15.5c1.8,0,3.5-1.5,3.5-3.3S14,8.9,12,8.9c-1.8,0-3.5,1.5-3.5,3.3S10.2,15.5,12,15.5z"/>
                    <path class="st0" d="M12,5.3c4.9,0,9.2,2.8,11.4,6.7c-2.1,3.9-6.4,6.7-11.4,6.7S2.8,15.9,0.6,12C2.8,8.1,7.1,5.3,12,5.3z M12,17.1
                        c-3.9,0-7.4-2-9.4-5.1c2-3,5.4-4.9,9.4-4.9s7.4,2,9.4,5.1C19.4,15.1,15.9,17.1,12,17.1z"/>
                </g>
                </svg>
                <span class="text">{{$t "news.text.released" }}</span>
            </button>
            <button class="tab" data-tab="b">
                <svg version="1.1" id="Ebene_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 24 24" enable-background="new 0 0 24 24" xml:space="preserve" height="24px" width="24px">
                <g>
                    <path d="M20.3,9.9c0.9-0.9,1.5-2,2.1-3.1h-1.8c-2,3.1-5.2,5-8.7,5s-6.9-2-8.7-5H1.4C2,7.9,2.7,8.9,3.5,9.9l-2.4,2.6l1.1,1.2
                        l2.6-2.8c1.1,0.9,2.3,1.5,3.7,2l-1.1,3.8l1.5,0.5l0.9-3.8c0.8,0.2,1.4,0.2,2.1,0.2c0.8,0,1.4,0,2.1-0.2l0.9,3.8l1.5-0.5l-0.9-3.8
                        c1.4-0.5,2.6-1.2,3.7-2l2.6,2.8l1.1-1.2L20.3,9.9L20.3,9.9z"/>
                </g>
                </svg>
                <span class="text">{{$t "news.text.unpublished" }}<span class="count-badge"
                        data-badge="{{unpublishedNews.total}}" /></span></span>
            </button>
            <div class="indicator" style="left: 0px; right: 583.5px;"></div>
        </div>
    </div>
    <div class="sectionsContainer">
        <div class="sections">
            <div class="section" data-section="a">
                {{> 'dashboard/components/card_section' section-id="news" title="" content=news link-text=($t 'dashboard.link.continueReading')}}
                <div class="container">
                    {{> "lib/components/pagination" settings=pagination }}
                </div>
            </div>
            <div class="section" data-section="b">
                {{> 'dashboard/components/card_section' section-id="news" title="" content=unpublishedNews.data link-text=($t 'dashboard.link.continueReading')}}
            </div>
        </div>
    </div>
    {{else}}
    <div>
        {{> 'dashboard/components/card_section' section-id="news" title="" content=news link-text=($t 'dashboard.link.continueReading')}}
        <div class="container">
            {{> "lib/components/pagination" settings=pagination }}
        </div>
    </div>
    {{/if}}
</div>
{{#embed "lib/components/modal" class="delete-modal" title="${res.$t('global.text.areYousure')}"}}
{{#content "body"}}
<div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-close">
        {{$t "global.button.cancel" }}
    </button>
    <button type="submit" class="btn btn-primary btn-submit" data-testid="delete-overview-news-btn">
        {{$t "global.headline.delete" }}
    </button>
</div>
{{/content}}
{{/embed}}
{{/content}}
{{/extend}}
