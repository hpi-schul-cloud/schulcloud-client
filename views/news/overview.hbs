{{#extend "news/news"}}
    {{#content "page"}}
        <div class="route-news">
                {{#userHasPermission "SCHOOL_NEWS_EDIT"}}
                    <a href="/news/new" class="sc-btn sc-btn-primary btn-add create pull-right mb-1">
                        <i class="fa fa-plus" aria-hidden="true"></i> News hinzufügen
                    </a>
                {{/userHasPermission}}
            {{> 'dashboard/components/card_section' section-id="news" title="" content=news link-text="Weiterlesen"}}
            <div class="container">
                {{> "lib/components/pagination" settings=pagination }}
            </div>
        </div>
        {{#embed "lib/components/modal" class="delete-modal" title="Bist du dir sicher?"}}
            {{#content "body"}}
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-close">
                        Abbrechen
                    </button>
                    <button type="submit" class="btn btn-primary btn-submit">
                        Löschen
                    </button>
                </div>
            {{/content}}
        {{/embed}}
    {{/content}}
{{/extend}}