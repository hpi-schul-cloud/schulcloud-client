{{#extend "lib/default"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/authentication/home.css" />
        <link rel="stylesheet" href="/styles/partner/partner.css" />
        <link rel="stylesheet" href="/styles/about/about.css" />
        <style>
            header a[href='/about']{
                background-color: #f8a41b;
            }
        </style>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script type="text/javascript" src="/vendor-optimized/timeline3/js/timeline-min.js" defer></script>
        <script type="text/javascript" src="/scripts/about.js" defer></script>
    {{/content}}

    {{#content "body"}}
        {{#embed "lib/header"}}{{/embed}}
        <div class="container">
            <div class="card">
                <div class="card-block">
                    <div class="section-title">
                        <h3>{{title}}</h3>
                    </div>
                    {{#embed "about/about"}}{{/embed}}
                </div>
            </div>
        </div>
        {{#embed "lib/extended_footer"}}{{/embed}}
    {{/content}}
{{/extend}}