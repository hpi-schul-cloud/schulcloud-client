<section data-panel="section-{{section-nr}}" {{#if submit-page}}class="submit-page"{{/if}}>
  <h2 class="h4">{{$t "firstLogin.global.headline.birthdate" }}</h2>
  <p>{{$t "firstLogin.birthdate.text.weNeedYourDateOfBirth" }}</p>
  <div class="row">
    <div class="form-group col-md-6 col-sm-12">
      <label>{{$t "global.label.dateOfBirth" }} *</label>
      <input class="form-control linked" data-date data-min-date="{{datePickerTodayMinus 100 0 0}}" data-max-date="{{datePickerTodayMinus 4 0 0}}" value="{{datePickerTodayMinus CONSENT_WITHOUT_PARENTS_MIN_AGE_YEARS 0 0 "DD.MM.YYYY"}}" name="studentBirthdate" type="text" required autocomplete="off" />
    </div>
  </div>
</section>
