{{#extend "lib/default"}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/authentication/home.css"/>
        <link rel="stylesheet" href="/styles/authentication/login.css"/>
    {{/content}}

    {{#content "body"}}
        {{#embed "lib/header"}}{{/embed}}
        <main class="container">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <section class="card">
                        <div class="card-block">
                            <div class="col-xs-12">
                                {{> "lib/components/notification"}}
                            </div>
                            <div class="col-md-6 offset-md-3">
                                <div class="text-center">
                                    <h3>{{title}}</h3>
                                    <h4>{{subtitle}}</h4>
                                </div>

                                <div class="form-wrapper" style="padding-bottom: 10px">
                                    <form method="post" class="registration-form" action="{{action}}">

                                        <input type="hidden" name="accountId" value="{{accountId}}" />
                                        <input type="hidden" name="userId" value="{{userId}}" />
                                        <input type="hidden" name="schoolId" value="{{schoolId}}" />

                                        {{#block "fields"}}{{/block}}

                                        <p><small>Indem du auf „{{buttonLabel}}“ klickst, erklärst du dich mit unseren
                                            <a href="">Nutzungsbedingungen</a> einverstanden und bestätigst, dass du unsere
                                            <a href="">Datenschutzrichtlinie</a> gelesen hast.</small></p>

                                        <input type="submit" class="btn btn-primary btn-block" value="{{buttonLabel}}" />
                                    </form>

                                </div>

                                <span class="hint">
                                    <sup>*</sup>
                                    Mindestens 8 Zeichen mit Groß- und Kleinschreibung und mindestens einer Zahl und Sonderzeichen.
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        {{#embed "lib/extended_footer"}}{{/embed}}
    {{/content}}
{{/extend}}