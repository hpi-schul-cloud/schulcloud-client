{{#extend "lib/default"}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/authentication/home.css"/>
        <link rel="stylesheet" href="/styles/authentication/login.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/pwrecovery.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "body"}}
        {{#embed "lib/header"}}{{/embed}}
        <main class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <section class="card">
                        <div class="card-block">
                            <div class="col-xs-12">
                                {{> "lib/components/notification"}}
                            </div>
                            <div class="text-center">
                                <h3>{{title}}</h3>
                                <h4>{{subtitle}}</h4>
                            </div>

                            <div class="form-wrapper" style="padding-bottom: 10px">
                                <form method="post" class="registration-form" action="{{action}}">

                                    <input type="hidden" name="userId" value="{{userId}}" />

                                    <div class="form-group">
                                        <div class="form-group">
                                            <label>E-Mail-Adresse</label>
                                            <input type="email" name="email" class="form-control form-control-lg" placeholder="max.musterschüler@schul-cloud.org" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Passwort <sup>*</sup></label>
                                            <input type="password" name="password" id="password" class="form-control form-control-lg" placeholder="***************" pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[a-z])(?=.*[\-_!<>§$%&\/()=?\\;:,.#+*~']).{8,255}$"
                                                   title="Mindestens 8 Zeichen mit Groß- und Kleinschreibung und mindestens einer Zahl und Sonderzeichen" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Zur Kontrolle</label>
                                            <input type="password" name="password_control" id="password_control" class="form-control form-control-lg" placeholder="***************" required>
                                        </div>
                                    </div>

                                    <input type="submit" class="btn btn-primary btn-block" value="{{buttonLabel}}" />
                                </form>

                            </div>

                            {{#if noPassword }}
                            <span class="hint">
                                <sup>*</sup>
                                Mindestens 8 Zeichen mit Groß- und Kleinschreibung und mindestens einer Zahl und Sonderzeichen.
                            </span>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </main>
        {{#embed "lib/extended_footer"}}{{/embed}}
    {{/content}}
{{/extend}}