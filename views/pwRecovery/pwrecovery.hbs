{{#extend "lib/simple"}}
	{{#content "styles" mode="append"}}
		<link rel="stylesheet" href="{{getAssetPath '/styles/authentication/login.css'}}"/>
	{{/content}}

	{{#content "scripts" mode="append"}}
		<script src="{{getAssetPath '/scripts/pwrecovery.js'}}" type="text/javascript" nonce="{{nonceValue}}" defer></script>
	{{/content}}

	{{#content "page"}}
		<div class="col-lg-6 offset-lg-3">
			<div class="col-xs-12">
				{{> "lib/components/notification"}}
			</div>
			<div class="text-center">
				<h1 class="h4">{{title}}</h2>
			</div>

			<div class="form-wrapper">
				<form method="post" class="registration-form" action="{{action}}">
					<input type="hidden" name="resetId" value="{{resetId}}" />
					<div class="form-group">
						<label>{{$t "pwRecovery.label.newPw"}}</label>
						<input type="password" autocomplete="new-password" data-testid="password" name="password" id="password" class="form-control form-control-lg" placeholder="{{$t "pwRecovery.input.hiddenPw"}}" pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[a-z])(?=.*[\-_!<>ยง$%&\/()=?\\;:,.#+*~']).{8,255}$"
								title="{{> "lib/forms/password-hint" plaintext=true}}" required>
					</div>
					<div class="form-group">
						<label>{{$t "pwRecovery.label.repeatNewPw"}}</label>
						<input type="password" autocomplete="new-password" name="password_control" id="password_control" class="form-control form-control-lg" placeholder="{{$t "pwRecovery.input.hiddenPw"}}" title="{{> "lib/forms/password-hint" plaintext=true}}" required>
					</div>

                    {{> "lib/components/csrfInput"}}

					<input type="submit" class="btn btn-primary btn-block" value="{{buttonLabel}}" />
				</form>
			</div>
		</div>
	{{/content}}
{{/extend}}
