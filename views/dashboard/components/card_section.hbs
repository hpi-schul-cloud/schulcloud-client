<section class="section section-{{section-id}}" data-step="{{step}}" data-intro="{{intro}}">
    <div class="container-fluid">
        {{#if title}}
        <div class="row">
            <div class="col-sm-12">
                <h2 class="h5">{{title}}</h2>
            </div>
        </div>
        {{/if}}
        <div class="row tasks card-deck-row">
            {{#each content}}
            <div class="sc-card-wrapper col-xl-3 col-lg-4 col-md-6 col-sm-12" data-rss="{{isRSS}}" data-id="{{id}}">
                {{> 'lib/components/sc-card' link-text=../link-text additionalInfoName=../additionalInfoName}}
            </div>
            {{else}}
            <div class="col-md-8 offset-md-2 col-lg-12 offset-lg-0">
                <div class="alert">
                    Keine aktuellen Eintr√§ge vorhanden.
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>