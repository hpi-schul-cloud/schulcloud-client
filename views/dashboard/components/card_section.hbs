<section data-testid="{{section-id}}-section" class="section section-{{section-id}}">
    {{#if title}}
    <div class="row">
        <div class="col-sm-12">
            <h2 class="h5 mb-1 mt-2"><a class="dashboard-title" href="{{href}}">{{title}}</a></h2>
        </div>
    </div>
    {{/if}}
    <div class="container-fluid">
        <div class="row tasks card-deck-row" data-testid="courses">
            {{#each content}}
            <div class="sc-card-wrapper col-xl-3 col-lg-4 col-md-6 col-sm-12" data-testid="container_of_element" data-rss="{{isRSS}}" data-id="{{id}}">
                {{> 'lib/components/sc-card' link-text=../link-text additionalInfoName=../additionalInfoName}}
            </div>
            {{else}}
            <div class="col-md-8 offset-md-2 col-lg-12 offset-lg-0">
                <div class="alert">
                    {{$t "dashboard.text.notFound"}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
