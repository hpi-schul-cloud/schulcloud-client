{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/files/files.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/files.js" type="text/javascript" defer></script>
        <script src="/scripts/jquery.cookie.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}
        <div class="route-files-overview">
            {{#if libreOfficeUrl}}
            <iframe 
              src="{{libreOfficeUrl}}"
	            style="width: 100%; height: 800px; resize: vertical; overflow: auto;">
            </iframe>
            {{else}}
              <div class="alert alert-warning" role="alert">
                  <p>LibreOffice Online wurde nicht richtig konfiguriert! <span class="hidden-md-down">Bitte versuchen Sie es sp√§ter noch einmal oder benachrichtigen Sie Ihren Administrator.</span></p>
              </div>
            {{/if}}
        </div>
    {{/content}}
{{/extend}}
