{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/files/files.css"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="/scripts/files.js" type="text/javascript" defer></script>
        <script src="/scripts/jquery.cookie.js" type="text/javascript" defer></script>
    {{/content}}

    {{#content "page"}}
        <div class="route-files-overview">
            {{#if libreOfficeUrl}}
            <iframe 
              src="{{libreOfficeUrl}}"
	            style="width: 100%; height: 800px; resize: vertical; overflow: auto;">
            </iframe>
            {{else}}
              <div class="alert alert-warning" role="alert">
                  <p>{{$t "files.text.libreOfficeOnlineWasNotConfiguredCorrectly"}}' <span class="hidden-md-down">'{{$t "files.text.pleaseTryAgainLaterOrNotifyYourAdministrator"}}</span></p>
              </div>
            {{/if}}
        </div>
        {{#if libreOfficeUrl}}
            <div class="alert alert-warning">
                <p class="card-text">ðŸ’¡ {{$t "files.text.tips"}}</p>
                <a class="btn btn-secondary" href="{{libreOfficeUrl}}" target="_blank">{{$t "files.label.openDocumentInNewWindow"}}</a>
            </div>
        {{/if}}
    {{/content}}
{{/extend}}
