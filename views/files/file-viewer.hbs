<section class="file-viewer">
    <a href="#" class="lightbox videostop" id="file-view">
        <video id="my-video" class="video-js vjs-default-skin videoclick" autoplay controls preload="auto" data-setup='{"fluid": true}'></video>
        <script src="/vendor/video.js" nonce="{{nonceValue}}"></script>
        <img id="picture">
    </a>
</section>

{{#embed "lib/components/modal" class="open-modal" title="Möchtest du diese Datei mit einem externen Dienst öffnen?"}}
    {{#content "body"}}
        <div class="modal-body">
            <input class="box" type="checkbox" name="allowExternalViewers" value="save">{{$t files.text.rememberThisSelection}}<br>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-close">{{$t "global.button.cancel" }}</button>
            <button type="submit" class="btn btn-primary btn-submit">{{$t "files.button.open" }}</button>
        </div>
    {{/content}}
{{/embed}}
