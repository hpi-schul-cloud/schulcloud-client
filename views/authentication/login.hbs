{{#extend "lib/default"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="{{ furl '/styles/authentication/home.css' }}"/>
    {{/content}}

    {{#content "scripts" mode="append"}}
        <script src="{{ furl '/scripts/login.js' }}" type="text/javascript" defer></script>
        <script type="text/javascript" src="{{ furl '/vendor/mailchimp.js' }}" data-dojo-config="usePlainJson: true, isDebug: false" defer></script>
    {{/content}}

    {{#content "body"}}
        {{#embed "lib/header"}}{{/embed}}
        <main class="container">
            <div class="row">
                <div class="col-md-6 offset-md-3">

                    {{> "authentication/forms/login"}}
                    
                </div>
            </div>
        </main>

        {{#embed "lib/components/modal-form" action="/pwrecovery/" method="post" class="pwrecovery-modal"}}
            {{#content "fields"}}
                {{> "authentication/forms/pwrecovery"}}
            {{/content}}
        {{/embed}}

        {{#embed "lib/extended_footer"}}{{/embed}}

    {{/content}}
{{/extend}}
