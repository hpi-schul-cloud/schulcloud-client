
{{#if @root.currentSchoolData.inUserMigration}}
    {{#userHasPermission 'IMPORT_USER_VIEW'}}
        <input type="hidden" id="inUserMigrationStarted" value="{{currentRole}}"/>
    {{/userHasPermission}}
{{else}}
    {{#if @root.currentSchoolData.officialSchoolNumber}}
        {{#ifneq @root.currentSchoolData.inUserMigration false}}
            {{#userHasPermission 'IMPORT_USER_MIGRATE'}}
                <input type="hidden" id="inUserMigration" value="{{currentRole}}"/>
            {{/userHasPermission}}
        {{/ifneq}}
    {{/if}}
{{/if}}
