{{#extend "lib/default"}}
    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="/styles/lib/loggedin.css"/>
    {{/content}}

    {{#content "body"}}
        <aside class="nav-sidebar">
            <nav>
                <ul>
                    {{#each sidebarItems}}
                        <li>
                            <a class="{{this.class}}" href="{{this.link}}">
                                <i class="fa fa-{{this.icon}}" aria-hidden="true"></i>
                                <span class="link-name">{{this.name}}</span>
                            </a>

                            {{#if this.childActive}}
                                {{#if this.children}}
                                    <ul class="subitems">
                                        {{#each this.children}}
                                            <li>
                                                <a class="subitem {{this.class}}" href="{{this.link}}">
                                                    <i class="fa fa-{{this.icon}}" aria-hidden="true"></i>
                                                    <span class="link-name">{{this.name}}</span>
                                                </a>
                                            </li>
                                        {{/each}}
                                    </ul>
                                {{/if}}
                            {{/if}}

                        </li>
                    {{/each}}
                </ul>
            </nav>
            <a class="mobile-nav-toggle">
                <i class="fa fa-bars"></i>
            </a>
        </aside>

        <section class="content-wrapper">
            <nav class="topbar navbar">

                {{#if breadcrumb}}
                    <ol class="breadcrumb">
                        {{#each breadcrumb}}
                            <li class="breadcrumb-item {{this.class}}">
                                <a href="{{this.url}}">{{this.title}}</a>
                            </li>
                        {{/each}}
                    </ol>
                {{/if}}

                <ul class="nav navbar-nav float-xs-right">
                    <li class="nav-item">
                        <div class="btn-group">
                            <button type="button" class="btn btn-secondary dropdown-toggle account-toggle"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <strong>{{ currentUser.displayName }}</strong>
                            </button>
                            <div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="/account/">Einstellungen</a>
                                <a class="dropdown-item" href="/logout/">Abmelden</a>
                            </div>
                        </div>
                    </li>
                </ul>
            </nav>

            <section class="section-title">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-9">
                            <div>
                                <h4>{{title}}</h4>
                            </div>
                            <div>
                                {{subtitle}}
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <form class="search-wrapper" action="/content/" method="get">
                                <a class="mobile-search-toggle">
                                    <i class="fa fa-search"></i>
                                </a>
                                <div class="input-group input-group-sm">
                                    <input type="text" class="form-control search-field" placeholder="Suche nach..." name="q" />
                                    <span class="input-group-btn">
						                <button type="submit" class="btn btn-secondary">
                                            <i class="fa fa-search"></i>
                                        </button>
					                </span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>

            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        {{#block "page"}}{{/block}}
                    </div>
                </div>
            </div>

            <footer>
                <div class="imprint">
                    <div class="center">
                        <img src="/images/hpi-logo.png" width="235" height="44" />
                        <a>&copy; 2017 Schul-Cloud </a>

                        <nobr>
                            <span> - </span>
                            <a href="https://hpi.de/impressum.html" target="blank">Impressum</a>
                            <span> - </span>
                            <a href="mailto:hpi-info@hpi.de?subject=Schul_Cloud%20Anfrage">Kontakt</a>
                        </nobr>
                    </div>
                </div>
            </footer>

        </section>
    {{/content}}
{{/extend}}