<script type="text/javascript">
    var _paq = _paq || [];
        {{#if currentUser}}
        _paq.push(['setCustomDimension', customDimensionId = 1, customDimensionValue = '{{currentSchoolData.name}}']);
        _paq.push(['setCustomDimension', customDimensionId = 2, customDimensionValue = '{{currentUser.gender}}']);
        _paq.push(['setCustomDimension', customDimensionId = 4, customDimensionValue = '{{currentUser.roles.0.name}}']);
        {{/if}}


    _paq.push(['trackPageView']);

    (function () {
        var u = "//open.hpi.de/piwik/";
        _paq.push(['setTrackerUrl', u + 'piwik.php']);
        _paq.push(['setSiteId', '8']);
        var d = document, g = d.createElement('script'), s = d.getElementsByTagName('script')[0];
        g.type = 'text/javascript';
        g.async = true;
        g.defer = true;
        g.src = u + 'piwik.js';
        s.parentNode.insertBefore(g, s);
    })();
</script>