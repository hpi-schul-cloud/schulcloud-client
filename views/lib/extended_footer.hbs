{{#embed "authentication/section" style="dark footer" class=""}}
{{#content "body"}}
<footer id="footer">
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<h2 class="h4">{{$t "global.link.contact" }}</h2>
				<ul>
					{{> "lib/extended_footer_links"}}
				</ul>
			</div>
			<div class="col-md-4">
				<h2 class="h4">{{$t "lib.extended_footer.headline.links"}}</h2>
				<ul>
					<li><a href="/imprint">{{$t "global.link.imprint" }}</a></li>
					<li><a href="/termsofuse" target="_blank" aria-label="{{$t "lib.global.link.termsOfUse"}} PDF {{$t "global.link.openInNewTabWarning"}}"
							rel="noopener">{{{$t "lib.global.link.termsOfUseHPI" }}}</a>
					</li>
					<li><a href="/privacypolicy" target="_blank" aria-label="{{$t "global.text.dataProtection"}} PDF {{$t "global.link.openInNewTabWarning"}}"
							rel="noopener">{{{$t "lib.global.link.dataProtectionDeclaration" }}}</a>
					</li>
					<li><a href="https://github.com/hpi-schul-cloud/" target="_blank" rel="noopener" aria-label="{{$t "lib.global.link.github"}} {{$t "global.link.openInNewTabWarning"}}">{{$t "lib.global.link.github"}}</a></li>
					<li><a href="{{@root.theme.status_url}}" target="_blank" rel="noopener"  aria-label="{{$t "lib.global.link.status"}} {{$t "global.link.openInNewTabWarning"}}">{{$t "lib.global.link.status"}}</a></li>
					<li><a href="/security">{{$t "lib.global.link.safety"}}</a></li>
				</ul>
			</div>
			<div class="col-md-4">
				<h2 class="h4 card-title">{{$t "lib.extended_footer.headline.vacancies" }}</h2>
				<div class="form-group">
					{{{$t "lib.extended_footer.text.weAreHiring"}}}
				</div>
				<a href="https://karriere.dataport.de/"
					rel="noopener" target="_blank" aria-label="{{$t "lib.extended_footer.link.currentJobOffers"}} {{$t "global.link.openInNewTabWarning"}}">{{$t "lib.extended_footer.link.currentJobOffers"}}</a>
			</div>
		</div>
	</div>
</footer>
{{/content}}
{{/embed}}
