<li class="nav-item help-drodown" data-testid="help-dropdown">
    <div class="dropdown minimal-button">
        <a
            class="btn btn-secondary btn-thin dropdown-toggle"
            href=""
            title="{{$t 'lib.help_menu.label.helpSection'}}"
            aria-label="{{$t 'lib.help_menu.label.helpSection'}}"
            data-toggle="dropdown"
            data-testid="help_top_menu"
        >
            <i class="mdi mdi-help-circle-outline" aria-hidden="true"></i>
        </a>
        <div class="dropdown-menu">
            <ul class="content list-group">
                <li class="list-group-item list-group-item-action">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M14 2H6a2 2 0 0 0-2 2v16c0 1.11.89 2 2 2h12c1.11 0 2-.89 2-2V8l-6-6m4 18H6V4h7v5h5v11m-3-7c0 1.89-2.25 2.07-2.25 3.76h-1.5c0-2.44 2.25-2.26 2.25-3.76 0-.82-.67-1.5-1.5-1.5s-1.5.68-1.5 1.5H9c0-1.65 1.34-3 3-3s3 1.35 3 3m-2.25 4.5V19h-1.5v-1.5h1.5Z"
                        ></path>
                    </svg>
                    <a href="/help" class="link" data-testid="Hilfeartikel">{{$t
                            "help.headline.helpSection"
                        }}</a>
                </li>

                {{#ifEnv "FEATURE_ENTERTHECLOUD" "true"}}
                    {{#userHasPermission "ENTERTHECLOUD_START"}}
                        <li
                            class="list-group-item list-group-item-action enterthecloud-btn"
                        >
                            <i class="fa fa-gamepad" aria-hidden="true"></i>
                            <button
                                type="button"
                                class="link btn-link enterthecloud-btn"
                                style="line-height: initial"
                            >{{$t
                                    "lib.help_menu.button.playEnterTheCloud"
                                }}</button>
                        </li>
                    {{/userHasPermission}}
                {{/ifEnv}}

                <li class="list-group-item list-group-item-action">
                    <svg
                        width="24"
                        height="24"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                    ><path
                            d="M12 3C6.5 3 2 6.58 2 11a7.218 7.218 0 0 0 2.75 5.5c0 .6-.42 2.17-2.75 4.5 2.37-.11 4.64-1 6.47-2.5 1.14.33 2.34.5 3.53.5 5.5 0 10-3.58 10-8s-4.5-8-10-8m0 14c-4.42 0-8-2.69-8-6s3.58-6 8-6 8 2.69 8 6-3.58 6-8 6Z"
                        ></path></svg>

                    <a
                        href="/help/contact/"
                        class="link"
                        data-testid="Hilfekontakt"
                    >{{$t "global.link.contact"}}</a>
                </li>
                <li class="list-group-item list-group-item-action">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                    ><path
                            d="M22 12v8a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2v-8a1 1 0 0 1-1-1V8a2 2 0 0 1 2-2h3.17A3 3 0 0 1 6 5a3 3 0 0 1 3-3c1 0 1.88.5 2.43 1.24v-.01L12 4l.57-.77v.01C13.12 2.5 14 2 15 2a3 3 0 0 1 3 3a3 3 0 0 1-.17 1H21a2 2 0 0 1 2 2v3a1 1 0 0 1-1 1M4 20h7v-8H4v8m16 0v-8h-7v8h7M9 4a1 1 0 0 0-1 1a1 1 0 0 0 1 1a1 1 0 0 0 1-1a1 1 0 0 0-1-1m6 0a1 1 0 0 0-1 1a1 1 0 0 0 1 1a1 1 0 0 0 1-1a1 1 0 0 0-1-1M3 8v2h8V8H3m10 0v2h8V8h-8Z"
                        /></svg>

                    <a
                        href="/system/releases/"
                        class="link"
                        data-testid="Release-Notes"
                        aria-label="{{$t 'lib.help_menu.link.releaseNotes'}}"
                    >{{$t "lib.help_menu.link.releaseNotes"}}</a>
                </li>
                <li class="list-group-item list-group-item-action">
                    <svg
                        width="24"
                        height="24"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                    ><path
                            d="M14 13v-2l-2 1-2-1v2l-2 1 2 1v2l2-1 2 1v-2l2-1M14 2H7a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h1v-2H7V4h6v4h4v10h-1v2h1a2 2 0 0 0 2-2V7m-5 6v-2l-2 1-2-1v2l-2 1 2 1v2l2-1 2 1v-2l2-1m-6 9 2-1 2 1v-5h-4m4-5v-2l-2 1-2-1v2l-2 1 2 1v2l2-1 2 1v-2l2-1Z"
                        ></path></svg>

                    <a
                        href="https://lernen.cloud/"
                        target="_blank"
                        class="link"
                        data-testid="Fortbildung"
                        aria-label="{{$t 'lib.help_menu.link.training'}} {{$t
                            'global.link.openInNewTabWarning'
                        }}"
                    >{{$t "lib.help_menu.link.training"}}</a>
                </li>
            </ul>
        </div>
    </div>
</li>

{{#ifEnv "FEATURE_ENTERTHECLOUD" "true"}}
    {{#userHasPermission "ENTERTHECLOUD_START"}}
        {{#embed
            "lib/components/modal"
            class="enterthecloud-modal"
            title=($t "lib.help_menu.label.playEnterTheCloud")
        }}
            {{#content "body"}}
                <div class="modal-body">
                    <p>{{$t "lib.help_menu.input.userName"}}
                        <code>...</code></p>
                    <p>{{$t "global.label.password"}} <code>...</code></p>
                    <a class="btn btn-primary" href="TODO">{{$t
                            "lib.help_menu.button.openGame"
                        }}</a>
                </div>
            {{/content}}
        {{/embed}}
    {{/userHasPermission}}
{{/ifEnv}}
