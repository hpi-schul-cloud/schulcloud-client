{{#if loggedin}}
    {{#extend "lib/loggedin"}}
        {{#content "styles" mode="append"}}
            <link rel="stylesheet" href="/styles/lib/error.css"/>
        {{/content}}
        {{#content "page"}}
            {{#embed "lib/error_content"}}{{/embed}}
        {{/content}}
    {{/extend}}
{{else}}
    {{#extend "lib/default"}}
        {{#content "styles" mode="append"}}
            <link rel="stylesheet" href="/styles/authentication/home.css"/>
            <link rel="stylesheet" href="/styles/lib/error.css"/>
        {{/content}}

        {{#content "body"}}
            {{#embed "lib/header"}}{{/embed}}
            <main class="container pt-3">
                {{#embed "lib/error_content"}}{{/embed}}
            </main>
            {{#embed "lib/extended_footer"}}{{/embed}}
        {{/content}}
    {{/extend}}
{{/if}}