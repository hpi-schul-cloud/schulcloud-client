<article class="sc-card">
    <a href="{{this.url}}" rel="canonical" class="sc-card-header" {{#if this.background}}style="background:{{this.background}};"{{/if}}>
        <span class="sc-card-title">
            <span class="title">{{{this.title}}}</span>
            {{#if this.secondaryTitle}}
                <small class="d-block">{{{this.secondaryTitle}}}</small>
            {{/if}}
        </span>

        <div class="sc-card-menu">
            {{#each this.actions}}
                {{#if this.method}}
                        <button class="sc-card-menu-action {{this.class}}"
                           
                           target="_blank"
                           data-method="delete-material"
                           data-name="{{../title}}"
                           alt="'{{../title}}' lÃ¶schen">
                            <i class="fa fa-{{this.icon}}"></i>
                        </button>
                {{else}}
                    <button class="sc-card-menu-action {{this.class}}" 
                      onClick="window.open({{this.link}})"
                      alt="'{{../../title}}' {{this.alt}}.">
                        <i class="fa fa-{{this.icon}}"></i>
                    </button>
                {{/if}}
            {{else}}
                {{#if this.menuInfo}}
                    <small class="sc-card-menu-info">{{{this.menuInfo}}}</small>
                {{/if}}
            {{/each}}
        </div>
    </a>
    <div class="sc-card-body ckcontent">
        {{{truncateHTML (conflictFreeHtml this.content)}}}
    </div>
    <div class="sc-card-footer">
        <a href="{{url}}" rel="canonical">{{{link-text}}}</a>
    </div>
</article>