<article class="sc-card">
    <a href="{{url}}" rel="canonical" class="sc-card-header" 
        {{#if this.background}} 
            style="background:{{this.background}};" 
        {{/if}}
    >
        <span class="sc-card-title">
            <h2 class="title">{{{ stripOnlyScript this.title }}}</h2>
            {{#if this.tag}}
                <p class="tag">{{{ tag }}}</p>
            {{/if}}
            <div class="second-title">
                {{#if this.secondaryTitle}}
                    <small>{{{ stripOnlyScript this.secondaryTitle }}}</small>
                {{/if}}
                <div class="sc-card-menu">
                    {{#each this.actions}}
                        {{#if this.method}}
                            <button class="sc-card-menu-action {{this.class}}" target="_blank" data-method="DELETE" data-name="{{../title}}"
                                alt="'{{../title}}' lÃ¶schen">
                                <i class="fa fa-{{this.icon}}"></i>
                            </button>
                        {{else}}
                            <button class="sc-card-menu-action {{this.class}}" onClick="window.open({{this.link}})" alt="'{{../../title}}' {{this.alt}}.">
                                <i class="fa fa-{{this.icon}}"></i>
                            </button>
                        {{/if}}
                        {{else}}
                        {{#if this.menuInfo}}
                            <small class="sc-card-menu-info">{{{this.menuInfo}}}</small>
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </span>
    </a>
    <div class="sc-card-body ckcontent">
        {{truncateHTML (conflictFreeHtml this.content)}}
    </div>
    <div class="sc-card-footer">
        <a  rel="canonical" href="{{url}}">
            {{{link-text}}}
        </a>
        {{#if additionalInfoName}}
            <div class="additionalInfo" >
                {{> (concat 'lib/sc-card_additionalInfo/' additionalInfoName) }}
            </div>
        {{/if}}
    </div>
</article>