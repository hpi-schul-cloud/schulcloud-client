    <section class="section-upload" data-school="{{schoolId}}" data-parent-id="{{parentId}}" data-parent-type="{{parentType}}">
        <div class="container-fluid">
            <div class="row">
                <button 
                {{#ifeq parentId undefined}}
                    disabled
                {{/ifeq}}
                type="button" class="form-upload dz-clickable" {{#userHasPermission "FILESTORAGE_CREATE"}}action="/"
                    {{/userHasPermission}}>
                    <div class="dz-default dz-message" data-dz-message="">
                        <span class="text-muted"><i class="fa fa-cloud-upload dz-clickable" aria-hidden="true"></i>
                            {{#ifeq parentId undefined}}
                                {{$t "files.text.storeFilesForUploadDisabled"}}
                            {{else}}
                            {{$t "files.text.storeFilesForUpload"}}
                            {{/ifeq}}
                         </span>
                    </div>
                    {{> "lib/components/csrfInput"}}
                </button>
                <div class="progress-bar">
                    <div class="progress">
                        <span class="percent" role="progressbar" aria-label="{{$t "files.text.storeFilesForUploadProgress"}}" aria-valuemin="0" aria-valuemax="100"></span>
                        <div class="bar" style="width:0%">&nbsp;</div>
                    </div>
                </div>
            </button>
        </div>
    </section>
