<div class="modal fade {{class}}" tabIndex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-label="{{$t "global.button.close"}}">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h1 class="h4 modal-title">{{title}}</h1>
            </div>
            {{#block "body"}}{{/block}}
        </div>
    </div>
</div>

