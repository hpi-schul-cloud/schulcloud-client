{{#if isLogin}}
    <header class="header">
        <nav class="container">
            <a id="title" href="/" aria-label="{{$t 'global.link.landing'}}">
                <img
                    class="logo"
                    alt="{{theme.title}}"
                    src="{{getAssetPath
                        '/images/logo/logo-dBildungscloud.svg'
                    }}"
                />
            </a>
            {{> "lib/components/alerts"}}
        </nav>
    </header>{{else}}
    <header class="header">
        <nav class="container">
            <a id="title" href="/" aria-label="{{$t 'global.link.landing'}}">
                <img
                    class="logo"
                    alt="{{theme.title}}"
                    src="{{getAssetPath
                        '/images/logo/logo-dBildungscloud.svg'
                    }}"
                />
            </a>
            {{#unless hideMenu}}
                <ul class="nav">
                    <li>
                        <a
                            class="nav-link"
                            href="{{getConfig
                                'GHOST_BASE_URL'
                            }}/erste-schritte/"
                            target="_blank"
                        >{{$t "global.link.firstSteps"}}</a>
                    </li>
                    <li>
                        <a
                            class="nav-link"
                            href="{{getConfig 'GHOST_BASE_URL'}}/"
                            target="_blank"
                        >{{$t "home.header.link.blog"}}</a>
                    </li>
                    <li>
                        <a
                            class="nav-link"
                            href="{{getConfig 'GHOST_BASE_URL'}}/faqs"
                            target="_blank"
                            rel="noopener"
                        >{{$t "home.header.link.faq"}}</a>
                    </li>
                    <li class="hidden-xs-down nav-link-login">
                        <a
                            class="btn-primary-nuxt-outline"
                            href="/loginRedirect"
                            style="margin-left: 10px;"
                            data-testid="login-btn"
                        >
                            <i class="fa fa-sign-in" aria-hidden="true"></i>
                            {{$t "home.header.link.login"}}
                        </a>
                    </li>
                    <li class="hidden-xs-down">
                        <a
                            class="btn-primary-nuxt"
                            href="/community"
                            style="margin-left: 8px;"
                        >{{$t "global.link.register"}}</a>
                    </li>
                </ul>
            {{/unless}}
        </nav>
        <div class="text-center hidden-sm-up" style="margin-bottom: 10px;">
            <a
                class="btn btn-sm btn-outline btn-primary"
                href="/loginRedirect"
            ><i class="fa fa-sign-in" aria-hidden="true"></i>
                {{$t "home.header.link.login"}}</a>
            <a class="btn btn-sm btn-primary" href="/community">{{$t
                    "global.link.register"
                }}</a>
        </div>
    </header>{{/if}}