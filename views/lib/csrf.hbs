{{#content "scripts" mode="append"}}
        <script src="{{getAssetPath '/scripts/csrf.js'}}" type="text/javascript" nonce="{{nonceValue}}" defer></script>
{{/content}}
{{#if loggedin}}
    {{#extend "lib/loggedin"}}
        {{#content "styles" mode="append"}}
            <link rel="stylesheet" href="{{getAssetPath '/styles/lib/error.css'}}"/>
        {{/content}}
        {{#content "page"}}
            {{#embed "lib/csrf_content"}}{{/embed}}
        {{/content}}
    {{/extend}}
{{else}}
    {{#extend "lib/loggedout"}}
        {{#content "styles" mode="append"}}
            <link rel="stylesheet" href="{{getAssetPath '/styles/lib/error.css'}}"/>
        {{/content}}

        {{#content "page"}}
			{{#embed "authentication/section"}}
				{{#content "body"}}
					<main id="main-content" class="container">
						{{#embed "lib/csrf_content"}}{{/embed}}
					</main>
				{{/content}}
			{{/embed}}
        {{/content}}
    {{/extend}}
{{/if}}
