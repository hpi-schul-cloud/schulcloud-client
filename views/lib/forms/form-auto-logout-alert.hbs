<div class="form-group" data-show-on-remaining-sec="{{@root.JWT_SHOW_TIMEOUT_WARNING_SECONDS}}" data-rst-default="{{@root.JWT_TIMEOUT_SECONDS}}">
<div class="text-center">
    <img src="https://s3.hidrive.strato.com/schul-cloud-hpi/images/Sloth.svg" class="sloth sloth-default" alt="" role="presentation"/>
    <img src="https://s3.hidrive.strato.com/schul-cloud-hpi/images/Sloth_error.svg" class="sloth sloth-error" alt="" role="presentation"/>
    <div class="sloth-text sloth-default">
        {{$t "lib.form_auto_logout.text.warning" }} <br>
        <time><span class="sloth-text-important"><span class="js-time">n/a</span> {{$t "lib.form_auto_logout.text.minutes" }}</span></time> {{$t "lib.form_auto_logout.text.loggedOutAutomatically" }} <br>
        {{$t "lib.form_auto_logout.text.nowExtendYourSession" }}
    </div>
    <div class="sloth-text sloth-error">
        </br>
        {{$t "lib.form_auto_logout.text.oopsThatShouldntHaveHappened" }} </br>
        {{$t "lib.form_auto_logout.text.yourSessionCouldntBeExtended" }}
    </div>
</div>
<div class="auto-logout-buttons-holder">
    <button type="button" class="btn btn-primary btn-add btn-incRst">
        {{$t "lib.form_auto_logout.button.extendSession" }}
    </button>
</div>
</div>
