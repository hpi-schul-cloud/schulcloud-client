<div class="navtooltips"></div>
<aside class="sidebar hidden">
    <nav id="sidebar" aria-label="{{$t "global.aria_label.sidebar"}}">
        <div class="sidebar-toggle sidebar-toggle-in-sidebar">
            <button class="icon-btn sidebar-toggle-button-in-sidebar" title="{{$t "lib.loggedin.label.sidebarMenu"}}" aria-label="{{$t "lib.loggedin.label.sidebarMenu"}}">
                <i id="sidebar-toggle-icon-in-sidebar" class="mdi mdi-menu-open"></i>
            </button>
            <a class="logo-wrapper" href="/dashboard" title="{{$t "global.link.landing"}}" data-testid="{{$t "global.link.landing"}}">
                <div class="logo"></div>
                <div class="sc-title"><span>{{theme.short_title}}</span></div>
            </a>
        </div>
        <ul class="sidebar-list">
            {{#each sidebarItems}}
                {{#ifeq this.name "divider"}}
                    <hr class="divider" aria-orientation="horizontal" role="separator">
                {{else}}
                    <li>
                        {{#unless ../children}}
                            <a class="{{../class}} sidebar-item" href="{{../link}}" title="{{../name}}" data-testid="{{../testId}}" aria-label="{{../name}} {{#if ../isExternalLink}}{{$t "global.link.openInNewTabWarning"}}{{/if}}" {{#if ../isExternalLink}}target="_blank" {{/if}}>
                                {{#if ../isExternalIcon}}
                                    {{{../icon}}}
                                {{else}}
                                    <i class="mdi mdi-{{../icon}}" aria-hidden="true"></i>
                                {{/if}}
                                <span class="link-name">{{../name}}</span>
                            </a>
                        {{/unless}}
                        {{#if ../children}}
                            <div class="{{../class}} sidebar-item group-toggle-btn"  data-group-name="{{../groupName}}" href="{{../link}}" title="{{../name}}" data-testid="{{../testId}}" aria-label="{{../name}} {{#if ../isExternalLink}}{{$t "global.link.openInNewTabWarning"}}{{/if}}" {{#if ../isExternalLink}}target="_blank" {{/if}} tabindex="0">
                                <div>
                                    {{#if ../isExternalIcon}}
                                        {{{../icon}}}
                                    {{else}}
                                        <i class="mdi mdi-{{../icon}}" aria-hidden="true"></i>
                                    {{/if}}
                                    <span class="link-name">{{../name}}</span>
                                </div>
                                <i id="{{../groupName}}-group-toggle-icon" class="mdi mdi-chevron-down" aria-hidden="true"></i>
                            </div>
                            <ul class="subitems {{../groupName}}">
                                {{#each ../children}}
                                    <li data-testid="{{this.testId}}">
                                        <a class="subitem {{this.class}}" href="{{this.link}}" title="{{this.name}}" aria-label="{{this.name}} {{#if this.isExternalLink}}{{$t "global.link.openInNewTabWarning"}}{{/if}}" {{#if this.isExternalLink}}target="_blank" rel="noopener"{{/if}}>
                                            <span class="link-name">{{this.name}}</span>
                                        </a>
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}
                    </li>
                {{/ifeq}}
            {{/each}}
        </ul>
        <hr class="divider legal" aria-orientation="horizontal" role="separator">
        <ul>
            {{#unlessEnv "SC_THEME" "default"}}
                {{#hasConfig "ACCESSIBILITY_REPORT_EMAIL"}}
                    {{#ifneq (getConfig "ACCESSIBILITY_REPORT_EMAIL") ""}}
                        <li>
                            <a href="mailto:{{getConfig "ACCESSIBILITY_REPORT_EMAIL"}}?subject={{$t "lib.global.link.accessibilityReport"}}" target="_blank" rel="noopener"
							aria-label="{{$t "lib.global.link.accessibilityReport"}} {{$t "global.link.openInNewTabWarning" }}" class="legal-link">
							{{$t "lib.global.link.accessibilityReport"}}</a>
					    </li>
                    {{/ifneq}}
                {{/hasConfig}}
            {{/unlessEnv}}
            <li>
                <a href="/imprint" class="legal-link">{{$t "global.link.imprint"}}</a>
            </li>
            <li>
                <a class="legal-link" href="/termsofuse" target="_blank" aria-label="{{$t "login.headline.onlyTermsOfUse"}} Thüringer Schulcloud PDF {{$t "global.openInNewTabWarning"}}" rel="noopener">{{$t "login.headline.onlyTermsOfUse"}}</a>
            </li>
            <li>
                <a class="legal-link" href="/privacypolicy" target="_blank" aria-label="{{$t "global.text.dataProtectionThr"}} Thüringer Schulcloud PDF {{$t "global.openInNewTabWarning"}}" rel="noopener">{{$t "global.text.dataProtectionThr"}}</a>
            </li>
        </ul>
    </nav>
</aside>
<div class="overlay"></div>
