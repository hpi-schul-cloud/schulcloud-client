{{#extend "lib/default"}}

    {{#content "scripts" mode="append"}}
        <script src="{{ furl '/scripts/partners.js' }}" type="text/javascript" defer></script>
    {{/content}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="{{ furl '/styles/partner/partner.css' }}"/>
        <link rel="stylesheet" href="{{ furl('/styles/authentication/home.css") }}/>
        <style>
            body {
                background: #e6e2e2;
            }
            .partner-box {
                background: white;
            }
            header a[href='/partner']{
                background-color: #f8a41b;
            }
        </style>
    {{/content}}

    {{#content "body"}}
        {{#embed "lib/header"}}{{/embed}}
        <div class="container">
            <div class="card">
                <div class="card-block">
                    <div class="section-title"><h3>Partner</h3></div>
                    {{#embed "partner/partner"}}{{/embed}}
                </div>
            </div>
        </div>
        {{#embed "lib/extended_footer"}}{{/embed}}
    {{/content}}

{{/extend}}
