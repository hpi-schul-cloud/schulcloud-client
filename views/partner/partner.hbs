<section class="section-partner">
	{{#embed "authentication/section" class="content-width-max"}}
		{{#content "body"}}
			{{#unless loggedin}}
				<h2 class="section-title center">{{$t "global.link.partner"}}</h2>
			{{/unless}}

			<h2 class="section-title center h3">{{$t "partner.headline.projectExecution"}}</h2>
			<div class="container">
				<div class="row">
					{{#each partners.project_partners}}
					<div class="partner-box-wrapper col-md-4">
						<a href="{{{url}}}" target="_blank">
							<div class="partner-box">
								<img src="{{{logo}}}" alt="{{$t "partner.img_alt.logo"}} {{{name}}}" class="img-fluid"
									{{#if padding}} style="padding: {{{padding}}};" {{/if}}>
							</div>
						</a>
					</div>
					{{/each}}
				</div>
			</div>
		{{/content}}
	{{/embed}}
	{{#embed "authentication/section" style="primary" class="content-width-max"}}
		{{#content "body"}}
			<h2 class="section-title center h3">{{$t "partner.headline.advisoryBoard"}}</h2>
			<div class="container">
				<div class="row">
					<div class="intro-box col-sm-12">
						<p>
							{{$t "partner.text.advisoryBoardDescription"}}
						</p>
					</div>
				</div>
			</div>
			<div class="row">
				{{#each partners.advisers}}
					<div class="partner-box-wrapper col-xs-6 col-md-3">
						<div class="partner-box">
							{{#if url}}<a href="{{{url}}}" target="_blank">{{/if}}
								<img src="{{{logo}}}" alt="{{$t "partner.img_alt.logo"}} {{{name}}}" class="img-fluid"
									{{#if padding}} style="padding: {{{padding}}};" {{/if}}>
							{{#if url}}
							</a>{{/if}}
						</div>
					</div>
				{{/each}}
				<div class="col-xs-12">
					<div id="hiddenAdvisers" class="collapse row">
						{{#each hiddenAdvisers}}
							<div class="partner-box-wrapper col-xs-6 col-md-3">
								<div class="partner-box">
									{{#if url}}<a href="{{{url}}}" target="_blank">{{/if}}
										<img  src="{{{logo}}}" alt="{{$t "partner.img_alt.logo"}} {{{name}}}" class="img-fluid"
											{{#if padding}} style="padding: {{{padding}}};" {{/if}}>
									{{#if url}}
									</a>{{/if}}
								</div>
							</div>
					{{/each}}
					</div>
				</div>
				<div class="buttonWrapper">
					<button class="btn toggle-partner transparent" class="btn btn-info collapsed" data-toggle="collapse" data-target="#hiddenAdvisers">
						{{$t "about.button.showMore"}}<i class="fa fa-angle-down" aria-hidden="true"></i></div>
					</button>
			</div>
		{{/content}}
	{{/embed}}
	{{#embed "authentication/section" class="content-width-max"}}
		{{#content "body"}}
			<h2 class="section-title center h3">{{$t "partner.headline.pilotPartners"}}</h2>
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<p>{{$t "partner.text.pilotPartnersDescription"}}</p>
					</div>
				</div>
				<div class="row">
					{{#each partners.content_partners}}
						<div class="partner-box-wrapper col-xs-6 col-md-3">
							<a href="{{{url}}}" target="_blank" >
								<div class="partner-box">
									<img src="{{{logo}}}" alt="{{$t "partner.img_alt.logo"}} {{{name}}}" class="img-fluid"
										{{#if padding}} style="padding: {{{padding}}};" {{/if}}>
								</div>
							</a>
						</div>
					{{/each}}
					<div class="col-xs-12">
						<div id="hiddenContentPartner" class="collapse row">
							{{#each hiddenContentPartners}}
								<div class="partner-box-wrapper col-xs-6 col-md-3">
									<a href="{{{url}}}" target="_blank">
										<div class="partner-box">
											<img src="{{{logo}}}" alt="{{$t "partner.img_alt.logo"}} {{{name}}}" class="img-fluid"
												{{#if padding}} style="padding: {{{padding}}};" {{/if}}>
										</div>
									</a>
								</div>
							{{/each}}
						</div>
					</div>
					<div class="buttonWrapper">
						<button class="btn toggle-partner transparent" class="btn btn-info collapsed" data-toggle="collapse" data-target="#hiddenContentPartner">
							{{$t "about.button.showMore"}}<i class="fa fa-angle-down" aria-hidden="true"></i></button>
					</div>
				</div>
			</div>
		{{/content}}
	{{/embed}}
	{{#embed "authentication/section" style="accent" class="content-width-max"}}
		{{#content "body"}}
			<h2 class="section-title center h3">{{$t "partner.headline.supporters"}}</h2>
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<p>{{$t "partner.text.supportersDescription"}}</p>
					</div>
				</div>
				<div class="row">
					{{#each partners.sponsors}}
						<div class="partner-box-wrapper col-xs-6 col-md-6">
							<a href="{{{url}}}" target="_blank">
								<div class="partner-box">
									<img src="{{{logo}}}" alt="{{$t "partner.img_alt.logo"}} {{{name}}}" class="img-fluid"
										{{#if padding}} style="padding: {{{padding}}};" {{/if}}>
								</div>
							</a>
						</div>
					{{/each}}
				</div>
			</div>
		{{/content}}
	{{/embed}}
</section>
