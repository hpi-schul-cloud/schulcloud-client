<div class="form-group section-uploaded-files">
    <label>Zur Abgabe hochgeladene Dateien</label>
    <br>
    <ul class="list-group-files d-flex flex-row">
        {{#each this.submission.fileIds}}
            <li class="list-group-item">
                <i class="fa fa-file" aria-hidden="true"></i> 
				<a href="/files/file?file={{this._id}}" target="_blank">
                    {{#if this.clearName}}
						{{this.clearName}}
					{{else}}	
						{{this.name}}
					{{/if}}
                </a>			
                <span class="fa-active">
                    <a href="/files/file?download=true&file={{this._id}}" target="_blank">
                    <i class="fa fa-cloud-download"></i>
                    </a>
                    {{#if ../deletionAllowed}}
                        <a href="/files/file/"
                            target="_blank"
                            data-method="delete-file"
                            data-file-name="{{this.name}}"
                            data-file-id="{{this._id}}">
                        <i class="fa fa-trash-o"></i>
                    </a>
                    {{/if}}
                </span>
            </li>
        {{/each}}
    </ul>
</div>
