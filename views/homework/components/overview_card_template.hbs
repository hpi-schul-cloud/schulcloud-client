<li class="card assignment {{this.privateclass}} disableable" style="border-left:10px solid {{this.color}}">
    <a class="content" href="{{this.url}}" alt="Details der Aufgabe: '{{this.name}}'"> 
        <div class="dates">
            {{timeToString availableDate}}<br/>
                bis {{timeToString dueDate}}
        </div>
    </a>
    {{#if this.stats}}
        <a class="content" href="{{this.url}}#activetabid=submissions" alt="Abgaben der Aufgabe: '{{this.name}}'">
            <div class="state">
                <circular-progress class="meinel-progress" primarycolor="#b10438" secondarycolor="#61BD4F" accentcolor="#404F70"
                    data="{{this.stats.submissionPercentage}}"
                    {{#if this.stats.gradePercentage}}secdata="{{this.stats.gradePercentage}}" {{/if}}
                    width="80" height="80">
                </circular-progress>
                <div class="textinfo">
                    <span>Abgegeben: {{this.stats.submissionCount}}</span>
                    <span>
                    {{#if this.stats.gradeCount}}
                        Bewertet: {{this.stats.gradeCount}}
                    {{else}}
                        Bewertet: -
                    {{/if}}
                    </span>
                    <span>
                        {{#if this.stats.averageGrade}}
                            Ø: {{this.stats.averageGrade}}%
                        {{else}}
                            Ø: -
                        {{/if}}
                    </span>
                </div>
            </div>
        </a>
    {{/if}}
    <a class="content" href="{{this.url}}" alt="Details der Aufgabe: '{{this.name}}'"> 
        <h5 class="title">
            {{#if this.courseId}}
                [<span>{{this.courseId.name}}</span>] -
            {{/if}}
            {{this.name}}
        </h5>
        <div class="ckcontent">
            {{#if this.description}}
                {{{truncateHTML (conflictFreeHtml this.description)}}}
            {{else}}
                keine Beschreibung vorhanden
            {{/if}}
        </div>
    </a>
    {{#userHasPermission "HOMEWORK_CREATE"}}
        {{! Maybe Teachers create Tasks for other Teachers -> prevent editing by them }}
        {{#ifvalue ../this.teacherId value=../this.currentUser._id}}
            {{#each ../this.actions}}
                {{#if this.method}}
                    <a class="btn btn-secondary btn-sm {{this.class}}"
                       href="{{this.link}}"
                       target="_blank"
                       data-method="{{this.method}}"
                       data-name="{{../../name}}"
                       alt="{{this.alt}} der Aufgabe: '{{../../name}}'.">
                        <i class="fa fa-{{this.icon}}"></i>
                    </a>
                {{else}}
                    <a class="btn btn-secondary btn-sm {{this.class}}" href="{{this.link}}" alt="Aufgabe '{{../../name}}' {{this.alt}}.">
                        <i class="fa fa-{{this.icon}}"></i> {{this.label}}
                    </a>
                {{/if}}
            {{/each}}
        {{/ifvalue}}
    {{/userHasPermission}}
    {{#inArray this.currentUser._id this.archived}}
        <a class="btn btn-secondary btn-sm btn-archive"
            href="{{../url}}"
            target="_blank"
            data="archive=open"
            data-toggle="tooltip" title="Verschiebe Aufgabe zwischen Übersichtsseite und Archiv"
            alt-text="<i class='fa fa-archive'></i>">
                <i class='fa fa-mail-reply'></i>
        </a>
    {{else}}
        <a class="btn btn-secondary btn-sm btn-archive"
            href="{{../url}}"
            target="_blank"
            data="archive=done"
            data-toggle="tooltip" title="Verschiebe Aufgabe zwischen Übersichtsseite und Archiv"
            alt-text="<i class='fa fa-mail-reply'></i>">
                <i class='fa fa-archive'></i>
        </a>
    {{/inArray}}
    <a href="{{this.url}}" alt="Details der Aufgabe: '{{this.name}}'">
        <span class="more">Details ><i className="fa fa-chevron-right" aria-hidden="true"></i></span>
    </a>
</li>