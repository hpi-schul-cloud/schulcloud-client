<li class="card assignment {{this.privateclass}} disableable{{#if this.stats}} has-stats{{/if}}{{#if this.grade}} has-stats{{/if}} {{this.privateclass}}" style="border-left:10px solid {{this.color}}">
    <a class="content" href="{{this.url}}" alt="Details der Aufgabe: '{{this.name}}'"> 
        <div class="dates">
            {{#if this.availableDate}}{{timeToString availableDate}}<br/>{{/if}}
                bis {{timeToString dueDate}}
        </div>
    </a>
    {{#if this.stats}}
        <a class="content" href="{{this.url}}#activetabid=submissions" alt="Abgaben der Aufgabe: '{{this.name}}'">
            <div class="state">
                <circular-progress class="meinel-progress" primarycolor="#b10438" secondarycolor="#009688" accentcolor="lightgrey"
                    data="{{this.stats.submissionPercentage}}"
                    {{#if this.stats.gradePercentage}}secdata="{{this.stats.gradePercentage}}" {{/if}}
                    width="70" height="70"
                    data-toggle="tooltip" data-placement="left" data-html="true" 
                    data-original-title="
                        Abgegeben: {{this.stats.submissionCount}}</br>
                        Bewertet: {{#if this.stats.gradeCount}}{{this.stats.gradeCount}}{{else}}-{{/if}}</br>
                        Ø: {{#if this.stats.averageGrade}}{{this.stats.averageGrade}}% richtig gelöst{{else}}-{{/if}}">
                </circular-progress>
            </div>
        </a>
    {{/if}}
    {{#if this.grade}}
        <a class="content" href="{{this.url}}#activetabid=feedback" alt="Bewertung der Aufgabe: '{{this.name}}'">
            <div class="state">
                <circular-progress class="meinel-progress" primarycolor="#009688" accentcolor="lightgrey"
                    data="{{this.grade}}" width="70" height="70"
                    data-toggle="tooltip" data-placement="left" data-original-title="Du hast {{this.grade}}% richtig gelöst.">
                </circular-progress>
            </div>
        </a>
    {{/if}}
    <a class="content" href="{{this.url}}" alt="Details der Aufgabe: '{{this.name}}'"> 
        <h5 class="title">
            {{#if this.courseId}}
                [<span>{{this.courseId.name}}</span>{{#if this.isSubstitution}} <sub>Vertretung</sub>{{/if}}] -
            {{/if}}
            {{this.name}}
        </h5>
        <div class="ckcontent">
            {{#if this.description}}
                {{{truncateHTML (conflictFreeHtml this.description)}}}
            {{else}}
                keine Beschreibung vorhanden
            {{/if}}
        </div>
    </a>
    <div class="action-group">
    {{#inArray this.currentUser._id this.archived}}
        {{#userHasPermission "HOMEWORK_CREATE"}}
            <a class="btn btn-secondary btn-sm btn-archive"
            href="{{../url}}"
            target="_blank"
            data="archive=open"
            data-toggle="tooltip" title="Verschiebe Aufgabe zwischen Übersichtsseite und Archiv"
            alt-text="<i class='fa fa-archive'></i>">
                <i class='fa fa-mail-reply'></i>
        </a>
        {{/userHasPermission}}
    {{else}}
        {{#userHasPermission "HOMEWORK_CREATE"}}
            <a class="btn btn-secondary btn-sm btn-archive"
            href="{{../url}}"
            target="_blank"
            data="archive=done"
            data-toggle="tooltip" title="Verschiebe Aufgabe zwischen Übersichtsseite und Archiv"
            alt-text="<i class='fa fa-mail-reply'></i>">
                <i class='fa fa-archive'></i>
        </a>
        {{/userHasPermission}}
    {{/inArray}}
    {{#userHasPermission "HOMEWORK_CREATE"}}
    {{! Maybe Teachers create Tasks for other Teachers -> prevent editing by them }}
        {{#if ../this.isTeacher}}
            {{#each ../this.actions}}
                {{#if this.method}}
                    <a class="btn btn-secondary btn-sm {{this.class}}"
                       href="{{this.link}}"
                       target="_blank"
                       data-method="{{this.method}}"
                       data-name="{{../../name}}"
                       alt="{{this.alt}} der Aufgabe: '{{../../name}}'.">
                        <i class="fa fa-{{this.icon}}"></i>
                    </a>
                {{else}}
                    <a class="btn btn-secondary btn-sm {{this.class}}" href="{{this.link}}" alt="Aufgabe '{{../../name}}' {{this.alt}}.">
                        <i class="fa fa-{{this.icon}}"></i> {{this.label}}
                    </a>
                {{/if}}
            {{/each}}
        {{/if}}
    {{/userHasPermission}}
    </div>
    <a href="{{this.url}}" alt="Details der Aufgabe: '{{this.name}}'">
        <span class="more">Details ><i className="fa fa-chevron-right" aria-hidden="true"></i></span>
    </a>
</li>