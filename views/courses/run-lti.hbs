{{#content "scripts" mode="append"}}
    <script defer>
        setHeight = function() {
            // dirty fix for digitalgipfel
            $('.lti-frame').css({
                'height': ($(document).height() - $('.navbar').height() * 3) + 'px'
            });
        };
    </script>
{{/content}}
{{#extend "lib/loggedin"}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" href="{{ furl('/styles/tools/tools.css') }}"/>
    {{/content}}

    {{#content "page"}}
        <iframe class="lti-frame" src="/courses/{{course._id}}/tools/run/{{tool._id}}" frameborder="0" onload="setHeight()"></iframe>
    {{/content}}
{{/extend}}