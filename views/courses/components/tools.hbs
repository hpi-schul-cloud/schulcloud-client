<div class="row">
  <div class="col-sm-12">
    <div class="list-group">
      {{#if ltiToolIds}}
        {{#each ltiToolIds}}
          <div class="card card-block card-tool" onclick="location.href='/courses/{{../_id}}/tools/show/{{this._id}}'">
            <p class="card-title-directory">
              {{#if logo_url}}
                <img src={{this.logo_url}} class="float-left" style="width:auto; height:75px;" />
              {{else}}
                <img src="/images/cloud.png" class="float-left" style="width:auto; height:75px;" />
              {{/if}}
              <span>{{this.name}}</span>

              {{#userHasPermission "TOOL_CREATE" }}
                <a class="delete-tool" href="/courses/{{../../_id}}/tools/delete/{{../_id}}" target="_blank" data-method="DELETE" data-name="{{../name}}">
                  <i class="fa fa-trash-o"></i>
                </a>
              {{/userHasPermission}}
            </p>
          </div>
        {{/each}}
      {{else}}
      <div class="empty-state">
        <img src="/images/empty-states/assignment.png" alt="Keine gestellten Aufgaben" class="image"/>
        <h4>Füge dem Kurs Tools hinzu</h4>
        <h6 class="sub-title">
          Lorem Ipsum
        </h6>
      </div>
      {{/if}}
    </div>
  </div>
  <div class="col-sm-12">
    {{#userHasPermission "TOOL_CREATE" }}
      <a href="/courses/{{../_id}}/tools/add" class="btn btn-primary w-100 pull-right" title="Neues Tool hinzufügen">
        <i class="fa fa-plus" aria-hidden="true"></i><span> Neues Tool hinzufügen</span></a>
    {{/userHasPermission}}
  </div>
</div>
