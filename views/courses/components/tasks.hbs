<div class="row">
	<div class="col-sm-12 container">
		{{#ifneq 0 (arrayLength homeworks)}}
			<div class="course-tasks-header">
				<i class="fa fa-eye"></i>
				{{$t "courses._course.tasks.headline.posedTasks"}}
				<small>
					({{arrayLength ../homeworks}} {{#ifneq 1 (arrayLength ../homeworks)}}
													{{$t "courses._course.tasks.headline.tasks"}}
												  {{else}}
													{{$t "courses._course.tasks.headline.task"}}
												  {{/ifneq}})
				</small>
			</div>
			{{else}}
				<div class="empty-state">
					<img src="/images/empty-states/assignments.svg" alt="{{$t "courses._course.tasks.img_alt.noPosedTasks"}}" class="image" />
					{{#unless @root.isArchived}}
						{{#userHasPermission "COURSE_EDIT" }}
							<h2 class="h4">{{$t "courses._course.tasks.headline.createFirstTask"}}</h2>
							<p class="text-muted">
								{{$t "courses._course.tasks.text.descriptionTasks"}}
							</p>
						{{else}}
							<h2 class="h4 text-muted">{{$t "courses._course.tasks.headline.noTasksPosedYet"}}</h2>
						{{/userHasPermission}}
					{{else}}
						<h2 class="h4 text-muted">{{$t "courses._course.tasks.headline.noTasksPosed"}}</h2>
					{{/unless}}
				</div>
		{{/ifneq}}
		{{#if homeworks}}
			<div id="homeworks" class="container-fluid">
				<ol class="homework">
					<div class="row">
						{{#each homeworks}}
							{{> 'homework/components/course_overview_card_template'}}
						{{/each}}
					</div>
				</ol>
			</div>
		{{/if}}
	</div>
	<div class="col-sm-12 add-button">
		{{#userHasPermission "COURSE_EDIT" }}
			{{#unless @root.isArchived}}
				<a href="/homework/new?course={{../_id}}"
					class="btn btn-primary {{#if ../homeworks}}w-100{{else}}btn-empty{{/if}}"
					title="{{$t "courses._course.tasks.text.addTasks"}}">
					<span>{{$t "courses._course.tasks.button.createTask"}}</span>
				</a>
			{{/unless}}
		{{/userHasPermission}}
	</div>
</div>
<div class="section-my-tasks">
	<div class="row">
		<div class="col-sm-12">
			{{#userHasPermission "HOMEWORK_CREATE" }}
				{{#unless @root.isArchived}}
					<a href="/homework/new?course={{../_id}}&private=true"
						class="btn btn-secondary btn-sm pull-right ml-1" title="{{$t "courses._course.tasks.text.addPrivateTask"}}">
						<i class="fa fa-plus" aria-hidden="true"></i>
						<span class="hidden-md-down"> {{$t "courses._course.tasks.button.addPrivateTask"}}</span>
					</a>

				{{/unless}}
			{{/userHasPermission}}
			{{#ifneq 0 (arrayLength myhomeworks)}}
				<a data-toggle="collapse" class="collapse-toggle" href="#myhomeworks">
					<div class="course-tasks-header">
						<small title="{{$t "courses._course.tasks.text.showPrivateTasks"}}"><i class="fa fa-chevron-right collapse-icon"
								aria-hidden="true"></i></small>
						<i class="fa fa-eye-slash"></i>
						{{$t "courses._course.tasks.button.privateTasks"}}
						<small>({{arrayLength ../myhomeworks}} {{#ifneq 1 (arrayLength ../myhomeworks)}}
																    {{$t "courses._course.tasks.headline.tasks"}}
												  			   {{else}}
															    	{{$t "courses._course.tasks.headline.task"}}
												  			   {{/ifneq}})
						</small>
					</div>
				</a>
				<div id="myhomeworks" class="container-fluid collapse">
					<ol class="homework">
						<div class="row">
							{{#each ../myhomeworks}}
								{{> 'homework/components/course_overview_card_template'}}
							{{/each}}
						</div>
					</ol>
				</div>
			{{/ifneq}}
		</div>
	</div>
</div>
